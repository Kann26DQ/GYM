@model IEnumerable<GYM.Models.Usuario>
@{
    ViewData["Title"] = "Gestión de Usuarios";
    Layout = "_LayoutSuperAdmin";
}

<style>
    .search-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    .search-input {
        border-radius: 25px;
        border: 2px solid #fff;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
    }

        .search-input:focus {
            border-color: #ffc107;
            box-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
        }

    .btn-search {
        border-radius: 25px;
        padding: 0.75rem 2rem;
        font-weight: bold;
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        border: none;
        color: #000;
        transition: all 0.3s;
    }

        .btn-search:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
        }

    .btn-clear {
        border-radius: 25px;
        padding: 0.75rem 2rem;
        font-weight: bold;
    }

    .filter-select {
        border-radius: 15px;
        border: 2px solid #fff;
        padding: 0.75rem;
        background: rgba(255, 255, 255, 0.9);
    }

    .table-actions .btn {
        margin: 0.2rem;
    }

    .badge-custom {
        padding: 0.5rem 1rem;
        border-radius: 12px;
        font-weight: bold;
    }
</style>

<div class="container mt-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people-fill me-2"></i>Gestión de Usuarios</h2>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-person-plus-fill me-2"></i>Nuevo Usuario
        </a>
    </div>

    <!-- Alertas -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle me-2"></i>@TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ✅ NUEVO: Barra de búsqueda -->
    <div class="search-card">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label text-white fw-bold">
                    <i class="bi bi-funnel-fill me-2"></i>Buscar por:
                </label>
                <select name="tipoFiltro" class="form-select filter-select">
                    <option value="todos" selected="@(ViewBag.TipoFiltroActual == "todos" ? "selected" : null)">
                        🔍 Todos los campos
                    </option>
                    <option value="nombre" selected="@(ViewBag.TipoFiltroActual == "nombre" ? "selected" : null)">
                        👤 Nombre
                    </option>
                    <option value="email" selected="@(ViewBag.TipoFiltroActual == "email" ? "selected" : null)">
                        📧 Email
                    </option>
                    <option value="telefono" selected="@(ViewBag.TipoFiltroActual == "telefono" ? "selected" : null)">
                        📱 Teléfono
                    </option>
                    <option value="rol" selected="@(ViewBag.TipoFiltroActual == "rol" ? "selected" : null)">
                        🏷️ Rol
                    </option>
                </select>
            </div>

            <div class="col-md-5">
                <label class="form-label text-white fw-bold">
                    <i class="bi bi-search me-2"></i>Término de búsqueda:
                </label>
                <input type="text"
                       name="buscar"
                       class="form-control search-input"
                       placeholder="Escribe aquí para buscar..."
                       value="@ViewBag.BuscarActual"
                       maxlength="100">
            </div>

            <div class="col-md-3">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-search">
                        <i class="bi bi-search me-2"></i>Buscar
                    </button>
                    <a asp-action="Index" class="btn btn-light btn-clear">
                        <i class="bi bi-x-circle me-2"></i>Limpiar
                    </a>
                </div>
            </div>
        </form>

        @if (!string.IsNullOrWhiteSpace(ViewBag.BuscarActual))
        {
            <div class="mt-3">
                <span class="badge bg-light text-dark fs-6">
                    <i class="bi bi-info-circle me-2"></i>
                    Resultados para: "<strong>@ViewBag.BuscarActual</strong>"
                    en campo: <strong>@(ViewBag.TipoFiltroActual ?? "todos")</strong>
                </span>
            </div>
        }
    </div>

    <!-- Tabla de usuarios -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Mostrando <strong>@Model.Count()</strong> usuario(s)
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Teléfono</th>
                                <th>Rol</th>
                                <th>Estado</th>
                                <th>Fecha Registro</th>
                                <th class="text-center" style="width: 380px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@usuario.Nombre</strong>
                                    </td>
                                    <td>@usuario.Email</td>
                                    <td>@usuario.Telefono</td>
                                    <td>
                                        @if (usuario.Rol.Nombre == "Cliente")
                                        {
                                            <span class="badge bg-primary badge-custom">
                                                <i class="bi bi-person-fill me-1"></i>Cliente
                                            </span>
                                        }
                                        else if (usuario.Rol.Nombre == "Gymbro")
                                        {
                                            <span class="badge bg-info badge-custom">
                                                <i class="bi bi-star-fill me-1"></i>Gymbro
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (usuario.Activo)
                                        {
                                            <span class="badge bg-success badge-custom">
                                                <i class="bi bi-check-circle me-1"></i>Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger badge-custom">
                                                <i class="bi bi-x-circle me-1"></i>Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td>@usuario.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center table-actions">
                                        <div class="d-flex gap-2 justify-content-center flex-wrap">
                                            <a asp-action="Details" asp-route-id="@usuario.UsuarioId"
                                               class="btn btn-info btn-sm" title="Ver Detalles">
                                                <i class="bi bi-eye-fill me-1"></i>Ver
                                            </a>

                                            <a asp-action="Edit" asp-route-id="@usuario.UsuarioId"
                                               class="btn btn-warning btn-sm" title="Editar">
                                                <i class="bi bi-pencil-fill me-1"></i>Editar
                                            </a>

                                            <button type="button"
                                                    class="btn @(usuario.Activo ? "btn-secondary" : "btn-success") btn-sm"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#toggleModal@(usuario.UsuarioId)"
                                                    title="@(usuario.Activo ? "Desactivar" : "Activar")">
                                                <i class="bi bi-@(usuario.Activo ? "x-circle" : "check-circle") me-1"></i>
                                                @(usuario.Activo ? "Desactivar" : "Activar")
                                            </button>

                                            <button type="button"
                                                    class="btn btn-danger btn-sm"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal@(usuario.UsuarioId)"
                                                    title="Eliminar Permanentemente">
                                                <i class="bi bi-trash-fill me-1"></i>Eliminar
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Modal de Activar/Desactivar -->
                                <div class="modal fade" id="toggleModal@(usuario.UsuarioId)" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header @(usuario.Activo ? "bg-secondary" : "bg-success") text-white">
                                                <h5 class="modal-title">
                                                    <i class="bi bi-@(usuario.Activo ? "exclamation-triangle" : "check-circle") me-2"></i>
                                                    @(usuario.Activo ? "Desactivar" : "Activar") Cuenta
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                @if (usuario.Activo)
                                                {
                                                    <p class="fs-5">¿Estás seguro de que deseas <strong class="text-danger">desactivar</strong> la cuenta de <strong>@usuario.Nombre</strong>?</p>
                                                    <div class="alert alert-warning">
                                                        <i class="bi bi-exclamation-triangle me-2"></i>
                                                        <strong>Importante:</strong> Al desactivar esta cuenta:
                                                        <ul class="mb-0 mt-2">
                                                            <li>Se desactivarán todas sus membresías activas</li>
                                                            <li>El usuario no podrá iniciar sesión</li>
                                                            <li>Deberá comprar una nueva membresía para reactivar su cuenta</li>
                                                        </ul>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <p class="fs-5">¿Estás seguro de que deseas <strong class="text-success">activar</strong> la cuenta de <strong>@usuario.Nombre</strong>?</p>
                                                    <div class="alert alert-info">
                                                        <i class="bi bi-info-circle me-2"></i>
                                                        <strong>Nota:</strong> Aunque se active la cuenta, el usuario necesitará una membresía activa para usar el sistema completamente.
                                                    </div>
                                                }
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary btn-lg" data-bs-dismiss="modal">
                                                    <i class="bi bi-x-lg me-2"></i>Cancelar
                                                </button>
                                                <form asp-action="ToggleActivo" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@usuario.UsuarioId" />
                                                    <button type="submit" class="btn @(usuario.Activo ? "btn-secondary" : "btn-success") btn-lg">
                                                        <i class="bi bi-@(usuario.Activo ? "x-circle" : "check-circle") me-2"></i>
                                                        @(usuario.Activo ? "Desactivar" : "Activar")
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Modal de Eliminar -->
                                <div class="modal fade" id="deleteModal@(usuario.UsuarioId)" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">
                                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                                    ⚠️ Eliminar Usuario Permanentemente
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="alert alert-danger">
                                                    <i class="bi bi-exclamation-octagon me-2"></i>
                                                    <strong>¡ADVERTENCIA!</strong> Esta acción es <strong>IRREVERSIBLE</strong>.
                                                </div>
                                                <p class="fs-5">¿Estás completamente seguro de que deseas <strong class="text-danger">ELIMINAR PERMANENTEMENTE</strong> a:</p>
                                                <div class="card bg-light">
                                                    <div class="card-body">
                                                        <p class="mb-1"><strong>Nombre:</strong> @usuario.Nombre</p>
                                                        <p class="mb-1"><strong>Email:</strong> @usuario.Email</p>
                                                        <p class="mb-0"><strong>Rol:</strong> @usuario.Rol.Nombre</p>
                                                    </div>
                                                </div>
                                                <div class="alert alert-warning mt-3">
                                                    <strong>Se eliminarán:</strong>
                                                    <ul class="mb-0 mt-2">
                                                        <li>Todas sus membresías</li>
                                                        <li>Su carrito de compras</li>
                                                        <li>Relaciones con rutinas y planes alimenticios</li>
                                                        <li>Referencias en ventas</li>
                                                        <li><strong>El usuario será BORRADO de la base de datos</strong></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary btn-lg" data-bs-dismiss="modal">
                                                    <i class="bi bi-x-lg me-2"></i>Cancelar
                                                </button>
                                                <form asp-action="EliminarPermanente" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@usuario.UsuarioId" />
                                                    <button type="submit" class="btn btn-danger btn-lg">
                                                        <i class="bi bi-trash-fill me-2"></i>
                                                        SÍ, ELIMINAR PERMANENTEMENTE
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center py-5">
                    <i class="bi bi-inbox fa-3x mb-3"></i>
                    <h4>No se encontraron usuarios</h4>
                    @if (!string.IsNullOrWhiteSpace(ViewBag.BuscarActual))
                    {
                        <p>Intenta con otros términos de búsqueda.</p>
                        <a asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-2"></i>Ver todos los usuarios
                        </a>
                    }
                    else
                    {
                        <p>No hay usuarios registrados en el sistema.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>