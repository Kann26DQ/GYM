@model GYM.ViewModels.UsuarioCreateVM
@{
    ViewData["Title"] = "Nuevo Usuario";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<h2 class="text-center mb-4">Registrar Usuario</h2>

<form asp-action="Create" method="post" class="w-50 mx-auto">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control"
               type="email" placeholder="ejemplo@correo.com"
               pattern="^[^&#64;\s]+&#64;[^&#64;\s]+\.com$"
               title="Debe ser un correo válido que termine en .com" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-control" minlength="8" required />
        <small class="text-muted">Mínimo 8 caracteres.</small>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmarPassword" class="form-label"></label>
        <input asp-for="ConfirmarPassword" type="password" class="form-control" required />
        <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Telefono" class="form-label"></label>
        <input asp-for="Telefono" class="form-control"
               type="tel" inputmode="numeric" maxlength="9"
               pattern="^[0-9]{9}$"
               title="Debe contener exactamente 9 dígitos" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Rol</label>
        <select asp-for="RolId" class="form-select">
            <option value="1">Cliente</option>
            <option value="2">Empleado</option>
        </select>
        <span asp-validation-for="RolId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}