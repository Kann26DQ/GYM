@model GYM.Models.Usuario
@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<h2 class="text-center mb-4">Eliminar Usuario</h2>

<div class="alert alert-warning w-50 mx-auto">
    <p>¿Estás seguro de desactivar al usuario <strong>@Model.Nombre</strong>?</p>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="UsuarioId" />
        <button type="submit" class="btn btn-danger">Desactivar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
