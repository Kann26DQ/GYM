@model GYM.Models.Usuario
@{
    ViewData["Title"] = "Detalles del Usuario";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    var membresiaActiva = ViewData["MembresiaActiva"] as GYM.Models.MembresiaUsuario;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-person-badge me-2"></i>Detalles del Usuario
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small mb-1">Nombre Completo</label>
                                <h5 class="mb-0"><i class="bi bi-person me-2 text-primary"></i>@Model.Nombre</h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small mb-1">Email</label>
                                <h5 class="mb-0"><i class="bi bi-envelope me-2 text-primary"></i>@Model.Email</h5>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small mb-1">Teléfono</label>
                                <h5 class="mb-0"><i class="bi bi-telephone me-2 text-primary"></i>@Model.Telefono</h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small mb-1">Rol</label>
                                <h5 class="mb-0">
                                    @if (Model.Rol.Nombre == "Cliente")
                                    {
                                        <span class="badge bg-primary fs-6 px-3 py-2">
                                            <i class="bi bi-person me-1"></i>Cliente
                                        </span>
                                    }
                                    else if (Model.Rol.Nombre == "Gymbro")
                                    {
                                        <span class="badge bg-info fs-6 px-3 py-2">
                                            <i class="bi bi-people me-1"></i>Gymbro
                                        </span>
                                    }
                                </h5>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small mb-1">Estado de Cuenta</label>
                                <h5 class="mb-0">
                                    @if (Model.Activo)
                                    {
                                        <span class="badge bg-success fs-6 px-3 py-2">
                                            <i class="bi bi-check-circle me-1"></i>Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6 px-3 py-2">
                                            <i class="bi bi-x-circle me-1"></i>Inactivo
                                        </span>
                                    }
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small mb-1">Fecha de Registro</label>
                                <h5 class="mb-0">
                                    <i class="bi bi-calendar-check me-2 text-primary"></i>
                                    @Model.FechaRegistro.ToString("dd/MM/yyyy")
                                </h5>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Membresía Activa -->
                    <hr class="my-4" />
                    <div class="mb-3">
                        <h4 class="mb-3">
                            <i class="bi bi-card-checklist me-2 text-primary"></i>Membresía Activa
                        </h4>
                        @if (membresiaActiva != null)
                        {
                            <div class="card bg-light border-success">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="text-muted small mb-1">Plan</label>
                                            <h5 class="mb-0">
                                                <span class="badge bg-success fs-6 px-3 py-2">
                                                    @membresiaActiva.Plan?.Nombre
                                                </span>
                                            </h5>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="text-muted small mb-1">Precio Pagado</label>
                                            <h5 class="mb-0 text-success">
                                                <i class="bi bi-cash-coin me-2"></i>S/ @membresiaActiva.Precio.ToString("0.00")
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="text-muted small mb-1">Fecha de Inicio</label>
                                            <p class="mb-0">
                                                <i class="bi bi-calendar-event me-2 text-success"></i>
                                                @membresiaActiva.FechaInicio.ToString("dd/MM/yyyy HH:mm")
                                            </p>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="text-muted small mb-1">Fecha de Vencimiento</label>
                                            <p class="mb-0">
                                                <i class="bi bi-calendar-x me-2 text-danger"></i>
                                                @membresiaActiva.FechaFin.ToString("dd/MM/yyyy HH:mm")
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <label class="text-muted small mb-1">Días Restantes</label>
                                            @{
                                                var diasRestantes = (membresiaActiva.FechaFin - DateTime.UtcNow).Days;
                                            }
                                            <h5 class="mb-0">
                                                @if (diasRestantes > 30)
                                                {
                                                    <span class="badge bg-success fs-6 px-3 py-2">
                                                        <i class="bi bi-hourglass-split me-1"></i>@diasRestantes días
                                                    </span>
                                                }
                                                else if (diasRestantes > 7)
                                                {
                                                    <span class="badge bg-warning fs-6 px-3 py-2">
                                                        <i class="bi bi-hourglass-split me-1"></i>@diasRestantes días
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger fs-6 px-3 py-2">
                                                        <i class="bi bi-hourglass-bottom me-1"></i>@diasRestantes días
                                                    </span>
                                                }
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Sin Membresía Activa</strong> - El usuario no tiene ninguna membresía activa en este momento.
                            </div>
                        }
                    </div>
                </div>

                <div class="card-footer bg-light">
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left me-2"></i>Volver
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.UsuarioId" class="btn btn-primary btn-lg">
                            <i class="bi bi-pencil-fill me-2"></i>Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>