@{
    Layout = "_LayoutSuperAdmin";
    ViewData["Title"] = "Panel de Control GYM";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Panel de Control - SuperAdmin</h2>

    <div class="row g-3 justify-content-center">
        <!-- Gestión de Usuarios -->
        <div class="col-md-4 text-center">
            <a asp-controller="GestionUsuarios" asp-action="Index" class="btn btn-warning btn-lg w-100">
                <i class="fa fa-user-gear"></i> Gestionar Usuarios
            </a>
        </div>

        <!-- Gestión de Stock -->
        <div class="col-md-4 text-center">
            <a asp-controller="GestionStock" asp-action="Index" class="btn btn-success btn-lg w-100">
                <i class="fa fa-boxes-stacked"></i> Gestionar Stock
            </a>
        </div>
    </div>
</div>

<!-- Botón flotante para gestionar proveedores -->
<a asp-controller="GestionProveedor" asp-action="Index"
   class="btn btn-primary rounded-circle shadow"
   style="position: fixed; bottom: 25px; right: 25px; width: 55px; height: 55px; display: flex; align-items: center; justify-content: center; font-size: 20px;">
    <i class="fa fa-truck"></i>
</a>
