@model IEnumerable<GYM.Models.MovimientoStock>

@{
    ViewData["Title"] = "Historial de Movimientos";
    Layout = "_LayoutSuperAdmin";
}

<style>
    .stats-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        padding: 1.5rem;
        color: white;
        text-align: center;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        margin-bottom: 2rem;
    }

        .stats-card h3 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .stats-card p {
            margin: 0;
            opacity: 0.9;
        }

    .badge-movimiento {
        padding: 0.5rem 1rem;
        border-radius: 12px;
        font-weight: bold;
    }

    .entrada {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }

    .salida {
        background: linear-gradient(135deg, #ee0979 0%, #ff6a00 100%);
    }
</style>

<div class="container mt-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-clock-history me-2"></i>Historial de Movimientos de Stock
        </h2>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left me-2"></i>Volver a Stock
        </a>
    </div>

    <!-- Estadísticas -->
    @if (Model.Any())
    {
        var totalEntradas = Model.Where(m => m.TipoMovimiento == "Entrada").Sum(m => m.Cantidad);
        var totalSalidas = Model.Where(m => m.TipoMovimiento == "Salida").Sum(m => m.Cantidad);
        var totalMovimientos = Model.Count();

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stats-card">
                    <i class="bi bi-arrow-down-circle" style="font-size: 2rem;"></i>
                    <h3>@totalEntradas</h3>
                    <p>Total Entradas</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <i class="bi bi-arrow-up-circle" style="font-size: 2rem;"></i>
                    <h3>@totalSalidas</h3>
                    <p>Total Salidas</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                    <i class="bi bi-list-check" style="font-size: 2rem;"></i>
                    <h3>@totalMovimientos</h3>
                    <p>Total Movimientos</p>
                </div>
            </div>
        </div>
    }

    <!-- Tabla de Historial -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Mostrando <strong>@Model.Count()</strong> movimiento(s) registrado(s)
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Fecha y Hora</th>
                                <th>Producto</th>
                                <th>Tipo de Movimiento</th>
                                <th class="text-center">Cantidad</th>
                                <th>Responsable</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var movimiento in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="bi bi-calendar-event me-1"></i>
                                        @movimiento.Fecha.ToString("dd/MM/yyyy HH:mm:ss")
                                    </td>
                                    <td>
                                        <strong>@(movimiento.Producto?.Nombre ?? "N/A")</strong>
                                    </td>
                                    <td>
                                        @if (movimiento.TipoMovimiento == "Entrada")
                                        {
                                            <span class="badge badge-movimiento entrada">
                                                <i class="bi bi-arrow-down-circle me-1"></i>Entrada
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-movimiento salida">
                                                <i class="bi bi-arrow-up-circle me-1"></i>Salida
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary" style="font-size: 1rem; padding: 0.5rem 1rem;">
                                            @movimiento.Cantidad
                                        </span>
                                    </td>
                                    <td>
                                        <i class="bi bi-person-fill me-1"></i>
                                        @(movimiento.Usuario?.Nombre ?? "Sistema")
                                    </td>
                                    <td class="text-center">
                                        @if (movimiento.Producto != null)
                                        {
                                            <a asp-action="Details" asp-route-id="@movimiento.ProductoId"
                                               class="btn btn-info btn-sm">
                                                <i class="bi bi-eye-fill me-1"></i>Ver Producto
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <h4 class="mt-3">No hay movimientos registrados</h4>
                    <p class="text-muted">Los movimientos de entrada y salida de stock aparecerán aquí.</p>
                    <a asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-arrow-left me-2"></i>Volver a Gestión de Stock
                    </a>
                </div>
            }
        </div>
    </div>
</div>