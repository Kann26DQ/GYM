@{
    ViewData["Title"] = "Registrar Movimiento de Stock";
    Layout = "_LayoutSuperAdmin";
    var producto = ViewBag.Producto as GYM.Models.Producto;
}

<style>
    .product-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        padding: 2rem;
        color: white;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

        .product-card h3 {
            margin-bottom: 1rem;
        }

        .product-card .info-item {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

            .product-card .info-item:last-child {
                border-bottom: none;
            }

    .movement-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .radio-card {
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        cursor: pointer;
        transition: all 0.3s;
    }

        .radio-card:hover {
            border-color: #667eea;
            background: rgba(102, 126, 234, 0.05);
        }

        .radio-card input[type="radio"]:checked + label {
            color: #667eea;
            font-weight: bold;
        }

    .entrada-card {
        border-color: #28a745;
    }

        .entrada-card:hover {
            background: rgba(40, 167, 69, 0.05);
            border-color: #28a745;
        }

    .salida-card {
        border-color: #dc3545;
    }

        .salida-card:hover {
            background: rgba(220, 53, 69, 0.05);
            border-color: #dc3545;
        }
</style>

<div class="container mt-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-arrow-left-right me-2"></i>Registrar Movimiento de Stock
        </h2>
        <a asp-action="Details" asp-route-id="@producto.ProductoId" class="btn btn-secondary">
            <i class="bi bi-x-circle me-2"></i>Cancelar
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Card de Información del Producto -->
    <div class="product-card">
        <h3>
            <i class="bi bi-box-seam me-2"></i>@producto.Nombre
        </h3>
        <div class="info-item">
            <span><i class="bi bi-tag me-2"></i>Precio:</span>
            <strong>S/ @producto.Precio.ToString("0.00")</strong>
        </div>
        <div class="info-item">
            <span><i class="bi bi-boxes me-2"></i>Stock Actual en Bodega:</span>
            <strong>@producto.Stock unidades</strong>
        </div>
        <div class="info-item">
            <span><i class="bi bi-cart me-2"></i>Stock en Venta:</span>
            <strong>@producto.StockVenta unidades</strong>
        </div>
        @if (producto.Proveedor != null)
        {
            <div class="info-item">
                <span><i class="bi bi-building me-2"></i>Proveedor:</span>
                <strong>@producto.Proveedor.Nombre</strong>
            </div>
        }
    </div>

    <!-- Formulario de Movimiento -->
    <div class="movement-card">
        <h4 class="mb-4">
            <i class="bi bi-clipboard-check me-2"></i>Datos del Movimiento
        </h4>

        <form asp-action="RegistrarMovimiento" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="productoId" value="@producto.ProductoId" />

            <!-- Selección de Tipo de Movimiento -->
            <div class="mb-4">
                <label class="form-label fw-bold mb-3">
                    <i class="bi bi-arrow-left-right me-2"></i>Tipo de Movimiento *
                </label>

                <div class="row">
                    <div class="col-md-6">
                        <div class="radio-card entrada-card">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="tipoMovimiento"
                                       id="entrada" value="Entrada" checked>
                                <label class="form-check-label w-100" for="entrada">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-arrow-down-circle text-success me-2" style="font-size: 2rem;"></i>
                                        <div>
                                            <h5 class="mb-0 text-success">Entrada</h5>
                                            <small class="text-muted">Agregar productos al inventario</small>
                                        </div>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="radio-card salida-card">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="tipoMovimiento"
                                       id="salida" value="Salida">
                                <label class="form-check-label w-100" for="salida">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-arrow-up-circle text-danger me-2" style="font-size: 2rem;"></i>
                                        <div>
                                            <h5 class="mb-0 text-danger">Salida</h5>
                                            <small class="text-muted">Retirar productos del inventario</small>
                                        </div>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cantidad -->
            <div class="mb-4">
                <label for="cantidad" class="form-label fw-bold">
                    <i class="bi bi-123 me-2"></i>Cantidad *
                </label>
                <input type="number" class="form-control form-control-lg" id="cantidad" name="cantidad"
                       min="1" max="@(producto.Stock > 0 ? producto.Stock : 9999)" value="1" required>
                <div class="form-text">
                    <i class="bi bi-info-circle me-1"></i>
                    <span id="cantidadHelp">
                        Ingresa la cantidad de unidades para este movimiento.
                    </span>
                </div>
            </div>

            <!-- Botones -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle me-2"></i>Registrar Movimiento
                </button>
                <a asp-action="Details" asp-route-id="@producto.ProductoId" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle me-2"></i>Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Actualizar el texto de ayuda según el tipo de movimiento seleccionado
        document.querySelectorAll('input[name="tipoMovimiento"]').forEach(radio => {
            radio.addEventListener('change', function () {
                const cantidadInput = document.getElementById('cantidad');
                const helpText = document.getElementById('cantidadHelp');
                const stockActual = @producto.Stock;

                if (this.value === 'Entrada') {
                    cantidadInput.max = 9999;
                    helpText.innerHTML = 'Ingresa la cantidad de unidades a <strong>agregar</strong> al inventario.';
                } else {
                    cantidadInput.max = stockActual;
                    helpText.innerHTML = `Ingresa la cantidad de unidades a <strong>retirar</strong> del inventario. Máximo: <strong>${stockActual}</strong> unidades disponibles.`;
                }
            });
        });

        // Validación en tiempo real
        document.getElementById('cantidad').addEventListener('input', function () {
            const tipoMovimiento = document.querySelector('input[name="tipoMovimiento"]:checked').value;
            const stockActual = @producto.Stock;

            if (tipoMovimiento === 'Salida' && parseInt(this.value) > stockActual) {
                this.value = stockActual;
            }

            if (parseInt(this.value) < 1) {
                this.value = 1;
            }
        });
    </script>
}
