@model GYM.Models.Producto

@{
    Layout = "_LayoutSuperAdmin";
    ViewData["Title"] = "Editar Producto";
}

<h2>Editar Producto</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductoId" />

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Precio</label>
        <input asp-for="Precio" type="number" step="0.01" min="0" class="form-control" required />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <!-- Preservar valores sin mostrarlos -->
    <input type="hidden" asp-for="Stock" />
    <input type="hidden" asp-for="ProveedorId" />
    <input type="hidden" asp-for="StockVenta" />

    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}