@model IEnumerable<GYM.Models.Producto>

@{
    Layout = "_LayoutSuperAdmin";
    ViewData["Title"] = "Gestión de Stock";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a asp-controller="GestionProveedor" asp-action="Index" class="btn btn-outline-secondary">
            Proveedores
        </a>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus"></i> Nuevo Producto</a>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Precio (S/)</th>
            <th>Stock</th>
            <th>En venta (cupo)</th>
            <th>Proveedor</th>
            <th>En venta</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            var id = $"p{p.ProductoId}";
            <tr class="@(p.Stock <= 0 ? "table-danger" : "")">
                <td>@p.Nombre</td>
                <td>@p.Precio</td>
                <td>@p.Stock</td>
                <td>@p.StockVenta</td>
                <td>@p.Proveedor?.Nombre</td>
                <td>
                    @if (p.StockVenta > 0 && p.Stock > 0)
                    {
                        <span class="badge bg-success">Sí</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.ProductoId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@p.ProductoId" class="btn btn-danger btn-sm">Eliminar</a>

                    <!-- Botón que despliega input para Quitar de la venta -->
                    <button type="button"
                            class="btn btn-outline-danger btn-sm ms-1"
                            data-toggle="venta" data-target="#quitar-@id">
                        Venta
                    </button>
                    <div id="quitar-@id" class="d-none mt-2">
                        <!-- Poner a la venta -->
                        <form asp-action="AjustarStockVenta" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@p.ProductoId" />
                            <input type="hidden" name="accion" value="poner" />
                            <input name="cantidad" type="number" class="form-control d-inline-block"
                                   style="width: 120px;" min="1" max="@p.Stock" value="1" />
                            <button type="submit" class="btn btn-outline-success btn-sm ms-1">Poner</button>
                        </form>

                        <!-- Retirar de la venta -->
                        <form asp-action="AjustarStockVenta" method="post" class="d-inline ms-1">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@p.ProductoId" />
                            <input type="hidden" name="accion" value="retirar" />
                            <input name="cantidad" type="number" class="form-control d-inline-block"
                                   style="width: 120px;" min="1" max="@p.StockVenta" value="1" />
                            <button type="submit" class="btn btn-outline-danger btn-sm ms-1">Retirar</button>
                        </form>
                    </div>

                    <a asp-action="RegistrarMovimiento" asp-route-productoId="@p.ProductoId" class="btn btn-info btn-sm ms-1">
                        Movimiento
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('[data-toggle="venta"]').forEach(btn => {
                btn.addEventListener('click', function () {
                    const target = document.querySelector(this.dataset.target);
                    if (target) target.classList.toggle('d-none');
                });
            });
        });
    </script>
}

<div class="text-end mt-3">
    <a href="@Url.Action("Historial", "GestionStock")" class="btn btn-outline-primary mb-3">
        📜 Ver historial de entradas
    </a>
</div>