@model IEnumerable<GYM.Models.Producto>
@{
    ViewData["Title"] = "Gestión de Stock";
    Layout = "_LayoutSuperAdmin";
}

<style>
    .search-card {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(240, 147, 251, 0.3);
    }

    .search-input {
        border-radius: 25px;
        border: 2px solid #fff;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
    }

        .search-input:focus {
            border-color: #ffc107;
            box-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
        }

    .btn-search {
        border-radius: 25px;
        padding: 0.75rem 2rem;
        font-weight: bold;
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        border: none;
        color: #000;
        transition: all 0.3s;
    }

        .btn-search:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
        }

    .btn-clear {
        border-radius: 25px;
        padding: 0.75rem 2rem;
        font-weight: bold;
    }

    .filter-select {
        border-radius: 15px;
        border: 2px solid #fff;
        padding: 0.75rem;
        background: rgba(255, 255, 255, 0.9);
    }

    .badge-custom {
        padding: 0.5rem 1rem;
        border-radius: 12px;
        font-weight: bold;
    }

    .stock-badge {
        font-size: 1.1rem;
        padding: 0.6rem 1rem;
    }

    .alert-stock {
        border-left: 5px solid #dc3545;
    }

    .alert-low-stock {
        border-left: 5px solid #ffc107;
    }

    /* ✅ NUEVO: Estilos para los controles de venta */
    .venta-controls {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1rem;
        margin-top: 0.5rem;
    }

    .input-cantidad-venta {
        width: 80px;
        display: inline-block;
        text-align: center;
    }
</style>

<div class="container mt-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-box-seam-fill me-2"></i>Gestión de Stock</h2>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle-fill me-2"></i>Nuevo Producto
            </a>
            <a asp-action="Historial" class="btn btn-info btn-lg">
                <i class="bi bi-clock-history me-2"></i>Historial
            </a>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Alertas de Stock -->
    @{
        var productosAgotados = ViewBag.ProductosAgotados as List<GYM.Models.Producto> ?? new List<GYM.Models.Producto>();
        var productosBajoStock = ViewBag.ProductosBajoStock as List<GYM.Models.Producto> ?? new List<GYM.Models.Producto>();
    }

    @if (productosAgotados.Any())
    {
        <div class="alert alert-danger alert-stock alert-dismissible fade show" role="alert">
            <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>Productos Agotados</h5>
            <ul class="mb-0">
                @foreach (var p in productosAgotados.Take(5))
                {
                    <li><strong>@p.Nombre</strong> - Stock: 0</li>
                }
            </ul>
            @if (productosAgotados.Count > 5)
            {
                <p class="mb-0 mt-2"><em>...y @(productosAgotados.Count - 5) más</em></p>
            }
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (productosBajoStock.Any())
    {
        <div class="alert alert-warning alert-low-stock alert-dismissible fade show" role="alert">
            <h5 class="alert-heading"><i class="bi bi-exclamation-circle-fill me-2"></i>Stock Bajo (≤ 5 unidades)</h5>
            <ul class="mb-0">
                @foreach (var p in productosBajoStock.Take(5))
                {
                    <li><strong>@p.Nombre</strong> - Stock: @p.Stock</li>
                }
            </ul>
            @if (productosBajoStock.Count > 5)
            {
                <p class="mb-0 mt-2"><em>...y @(productosBajoStock.Count - 5) más</em></p>
            }
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Barra de búsqueda -->
    <div class="search-card">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label text-white fw-bold">
                    <i class="bi bi-funnel-fill me-2"></i>Buscar por:
                </label>
                <select name="tipoFiltro" class="form-select filter-select">
                    <option value="todos" selected="@(ViewBag.TipoFiltroActual == "todos" ? "selected" : null)">
                        🔍 Todos los campos
                    </option>
                    <option value="nombre" selected="@(ViewBag.TipoFiltroActual == "nombre" ? "selected" : null)">
                        📦 Nombre del Producto
                    </option>
                    <option value="proveedor" selected="@(ViewBag.TipoFiltroActual == "proveedor" ? "selected" : null)">
                        🏢 Proveedor
                    </option>
                    <option value="stock" selected="@(ViewBag.TipoFiltroActual == "stock" ? "selected" : null)">
                        📊 Stock Exacto
                    </option>
                    <option value="precio" selected="@(ViewBag.TipoFiltroActual == "precio" ? "selected" : null)">
                        💰 Precio Exacto
                    </option>
                </select>
            </div>

            <div class="col-md-5">
                <label class="form-label text-white fw-bold">
                    <i class="bi bi-search me-2"></i>Término de búsqueda:
                </label>
                <input type="text"
                       name="buscar"
                       class="form-control search-input"
                       placeholder="Escribe aquí para buscar..."
                       value="@ViewBag.BuscarActual"
                       maxlength="100">
            </div>

            <div class="col-md-3">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-search">
                        <i class="bi bi-search me-2"></i>Buscar
                    </button>
                    <a asp-action="Index" class="btn btn-light btn-clear">
                        <i class="bi bi-x-circle me-2"></i>Limpiar
                    </a>
                </div>
            </div>
        </form>

        @if (!string.IsNullOrWhiteSpace(ViewBag.BuscarActual))
        {
            <div class="mt-3">
                <span class="badge bg-light text-dark fs-6">
                    <i class="bi bi-info-circle me-2"></i>
                    Resultados para: "<strong>@ViewBag.BuscarActual</strong>"
                    en campo: <strong>@(ViewBag.TipoFiltroActual ?? "todos")</strong>
                </span>
            </div>
        }
    </div>

    <!-- Tabla de productos -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Mostrando <strong>@Model.Count()</strong> producto(s)
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Proveedor</th>
                                <th>Precio</th>
                                <th class="text-center">Stock Bodega</th>
                                <th class="text-center">En Venta</th>
                                <th>Disponible</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var producto in Model)
                            {
                                <tr class="@(producto.Stock <= 0 ? "table-danger" : producto.Stock <= 5 ? "table-warning" : "")">
                                    <td><strong>@producto.Nombre</strong></td>
                                    <td>@(string.IsNullOrEmpty(producto.Descripcion) ? "N/A" : producto.Descripcion)</td>
                                    <td>@(producto.Proveedor?.Nombre ?? "Sin proveedor")</td>
                                    <td class="text-success fw-bold">S/ @producto.Precio.ToString("0.00")</td>
                                    <td class="text-center">
                                        <span class="badge @(producto.Stock <= 0 ? "bg-danger" : producto.Stock <= 5 ? "bg-warning text-dark" : "bg-success") stock-badge">
                                            @producto.Stock
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @(producto.StockVenta > 0 ? "bg-info" : "bg-secondary") stock-badge">
                                            @producto.StockVenta
                                        </span>
                                    </td>
                                    <td>
                                        @if (producto.Disponible)
                                        {
                                            <span class="badge bg-success badge-custom">
                                                <i class="bi bi-check-circle me-1"></i>Sí
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger badge-custom">
                                                <i class="bi bi-x-circle me-1"></i>No
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <!-- Botones de Acción Principal -->
                                        <div class="btn-group mb-2" role="group">
                                            <a asp-action="Details" asp-route-id="@producto.ProductoId"
                                               class="btn btn-info btn-sm" title="Ver Detalles">
                                                <i class="bi bi-eye-fill"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@producto.ProductoId"
                                               class="btn btn-warning btn-sm" title="Editar">
                                                <i class="bi bi-pencil-fill"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@producto.ProductoId"
                                               class="btn btn-danger btn-sm" title="Eliminar">
                                                <i class="bi bi-trash-fill"></i>
                                            </a>
                                        </div>

                                        <!-- ✅ NUEVO: Botón para toggle de disponibilidad -->
                                        <div class="mb-2">
                                            <form asp-action="ToggleDisponibilidad" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@producto.ProductoId" />
                                                <button type="submit" class="btn @(producto.Disponible ? "btn-warning" : "btn-success") btn-sm w-100"
                                                        title="@(producto.Disponible ? "Ocultar de tienda" : "Mostrar en tienda")">
                                                    <i class="bi bi-@(producto.Disponible ? "eye-slash" : "eye") me-1"></i>
                                                    @(producto.Disponible ? "Ocultar" : "Mostrar")
                                                </button>
                                            </form>
                                        </div>

                                        <!-- ✅ NUEVO: Botón para gestionar stock de venta -->
                                        <button type="button" class="btn btn-primary btn-sm w-100"
                                                onclick="toggleVentaControls(@producto.ProductoId)">
                                            <i class="bi bi-cart-plus me-1"></i>Gestionar Venta
                                        </button>

                                        <!-- ✅ NUEVO: Controles de venta (ocultos por defecto) -->
                                        <div id="venta-controls-@producto.ProductoId" class="venta-controls mt-2" style="display: none;">
                                            <p class="small mb-2"><strong>Stock disponible:</strong> @producto.Stock</p>

                                            <!-- Poner a la venta -->
                                            <form asp-action="AjustarStockVenta" method="post" class="mb-2">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@producto.ProductoId" />
                                                <input type="hidden" name="accion" value="poner" />
                                                <div class="input-group input-group-sm">
                                                    <input type="number" name="cantidad" class="form-control input-cantidad-venta"
                                                           min="1" max="@producto.Stock" value="1" required />
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        <i class="bi bi-plus-circle"></i> Poner
                                                    </button>
                                                </div>
                                            </form>

                                            <!-- Retirar de la venta -->
                                            @if (producto.StockVenta > 0)
                                            {
                                                <form asp-action="AjustarStockVenta" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@producto.ProductoId" />
                                                    <input type="hidden" name="accion" value="retirar" />
                                                    <div class="input-group input-group-sm">
                                                        <input type="number" name="cantidad" class="form-control input-cantidad-venta"
                                                               min="1" max="@producto.StockVenta" value="1" required />
                                                        <button type="submit" class="btn btn-danger btn-sm">
                                                            <i class="bi bi-dash-circle"></i> Retirar
                                                        </button>
                                                    </div>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center py-5">
                    <i class="bi bi-inbox fa-3x mb-3"></i>
                    <h4>No se encontraron productos</h4>
                    @if (!string.IsNullOrWhiteSpace(ViewBag.BuscarActual))
                    {
                        <p>Intenta con otros términos de búsqueda.</p>
                        <a asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-2"></i>Ver todos los productos
                        </a>
                    }
                    else
                    {
                        <p>No hay productos registrados en el sistema.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleVentaControls(productoId) {
            const controls = document.getElementById(`venta-controls-${productoId}`);
            if (controls.style.display === 'none') {
                controls.style.display = 'block';
            } else {
                controls.style.display = 'none';
            }
        }
    </script>
}