@model GYM.Models.Producto

@{
    Layout = "_LayoutSuperAdmin";
    ViewData["Title"] = "Detalles del Producto";
}

<h2 class="my-4 text-center">Detalles del Producto</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow-sm border-0 p-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <h4 class="text-primary">@Model.Nombre</h4>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Edit" asp-route-id="@Model.ProductoId" class="btn btn-warning btn-sm">
                <i class="fa fa-edit"></i> Editar
            </a>
            <a asp-action="Delete" asp-route-id="@Model.ProductoId" class="btn btn-danger btn-sm">
                <i class="fa fa-trash"></i> Eliminar
            </a>
            <a asp-action="RegistrarMovimiento" asp-route-productoId="@Model.ProductoId" class="btn btn-info btn-sm">
                <i class="fa fa-exchange-alt"></i> Movimiento
            </a>
            <a asp-action="Historial" class="btn btn-secondary btn-sm">
                <i class="fa fa-history"></i> Historial
            </a>
        </div>
    </div>

    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Descripcion</dd>

        <dt class="col-sm-3">Precio</dt>
        <dd class="col-sm-9">S/ @Model.Precio.ToString("0.00")</dd>

        <dt class="col-sm-3">Stock Actual</dt>
        <dd class="col-sm-9">@Model.Stock</dd>

        <dt class="col-sm-3">Proveedor</dt>
        <dd class="col-sm-9">@Model.Proveedor?.Nombre ?? "Sin asignar"</dd>

        <dt class="col-sm-3">Fecha de registro</dt>
        <dd class="col-sm-9">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
</div>

<hr />

<h4 class="mt-4">Movimientos Recientes</h4>

@if (Model.Movimientos != null && Model.Movimientos.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Tipo</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mov in Model.Movimientos.OrderByDescending(m => m.Fecha).Take(5))
            {
                <tr>
                    <td>@mov.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@mov.TipoMovimiento</td>
                    <td>@mov.Cantidad</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No hay movimientos registrados para este producto.</p>
}

<div class="text-end mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>