@model GYM.Models.MembresiaPlan
@{
    Layout = "_LayoutSuperAdmin";
    ViewData["Title"] = "Nueva Membresía";
}

<h2>Nueva Membresía</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" placeholder="Ej: Plan Básico" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BeneficiosTexto" class="form-label">Beneficios (separados por ";")</label>
        <textarea asp-for="BeneficiosTexto" class="form-control" rows="4" placeholder="Ej: Acceso a rutinas; Plan alimenticio; Seguimiento"></textarea>
        <small class="text-muted">Separa cada beneficio con punto y coma (;)</small>
        <span asp-validation-for="BeneficiosTexto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label">Precio (S/)</label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0.01" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DuracionDias" class="form-label">Duración (días)</label>
        <input asp-for="DuracionDias" class="form-control" type="number" min="1" max="365" />
        <small class="text-muted">Máximo 365 días (1 año)</small>
        <span asp-validation-for="DuracionDias" class="text-danger"></span>
    </div>

    <div class="form-check mb-2">
        <input asp-for="PermiteRutina" class="form-check-input" />
        <label asp-for="PermiteRutina" class="form-check-label">Permite Rutina</label>
    </div>

    <div class="form-check mb-2">
        <input asp-for="PermiteAlimentacion" class="form-check-input" />
        <label asp-for="PermiteAlimentacion" class="form-check-label">Permite Alimentación</label>
    </div>

    <div class="form-check mb-4">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label">Activo</label>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save"></i> Guardar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa fa-times"></i> Cancelar
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}