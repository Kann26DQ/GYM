@model List<GYM.Models.Proveedor>

@{
    ViewData["Title"] = "Lista de Proveedores";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<style>
    .search-card {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(79, 172, 254, 0.3);
    }

    .search-input {
        border-radius: 25px;
        border: 2px solid #fff;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
    }

        .search-input:focus {
            border-color: #ffc107;
            box-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
        }

    .btn-search {
        border-radius: 25px;
        padding: 0.75rem 2rem;
        font-weight: bold;
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        border: none;
        color: #000;
        transition: all 0.3s;
    }

        .btn-search:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
        }

    .btn-clear {
        border-radius: 25px;
        padding: 0.75rem 2rem;
        font-weight: bold;
    }

    .filter-select {
        border-radius: 15px;
        border: 2px solid #fff;
        padding: 0.75rem;
        background: rgba(255, 255, 255, 0.9);
    }

    .badge-custom {
        padding: 0.5rem 1rem;
        border-radius: 12px;
        font-weight: bold;
    }
</style>

<div class="container mt-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-building me-2"></i>Lista de Proveedores</h2>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle-fill me-2"></i>Nuevo Proveedor
        </a>
    </div>

    <!-- Alertas -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ✅ NUEVO: Barra de búsqueda -->
    <div class="search-card">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label text-white fw-bold">
                    <i class="bi bi-funnel-fill me-2"></i>Buscar por:
                </label>
                <select name="tipoFiltro" class="form-select filter-select">
                    <option value="todos" selected="@(ViewBag.TipoFiltroActual == "todos" ? "selected" : null)">
                        🔍 Todos los campos
                    </option>
                    <option value="nombre" selected="@(ViewBag.TipoFiltroActual == "nombre" ? "selected" : null)">
                        🏢 Nombre
                    </option>
                    <option value="telefono" selected="@(ViewBag.TipoFiltroActual == "telefono" ? "selected" : null)">
                        📱 Teléfono
                    </option>
                    <option value="email" selected="@(ViewBag.TipoFiltroActual == "email" ? "selected" : null)">
                        📧 Email
                    </option>
                    <option value="direccion" selected="@(ViewBag.TipoFiltroActual == "direccion" ? "selected" : null)">
                        📍 Dirección
                    </option>
                </select>
            </div>

            <div class="col-md-5">
                <label class="form-label text-white fw-bold">
                    <i class="bi bi-search me-2"></i>Término de búsqueda:
                </label>
                <input type="text"
                       name="buscar"
                       class="form-control search-input"
                       placeholder="Escribe aquí para buscar..."
                       value="@ViewBag.BuscarActual"
                       maxlength="100">
            </div>

            <div class="col-md-3">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-search">
                        <i class="bi bi-search me-2"></i>Buscar
                    </button>
                    <a asp-action="Index" class="btn btn-light btn-clear">
                        <i class="bi bi-x-circle me-2"></i>Limpiar
                    </a>
                </div>
            </div>
        </form>

        @if (!string.IsNullOrWhiteSpace(ViewBag.BuscarActual))
        {
            <div class="mt-3">
                <span class="badge bg-light text-dark fs-6">
                    <i class="bi bi-info-circle me-2"></i>
                    Resultados para: "<strong>@ViewBag.BuscarActual</strong>"
                    en campo: <strong>@(ViewBag.TipoFiltroActual ?? "todos")</strong>
                </span>
            </div>
        }
    </div>

    <!-- Tabla de proveedores -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Mostrando <strong>@Model.Count</strong> proveedor(es)
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Teléfono</th>
                                <th>Email</th>
                                <th>Dirección</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var proveedor in Model)
                            {
                                <tr>
                                    <td><strong>#@proveedor.ProveedorId</strong></td>
                                    <td><strong>@proveedor.Nombre</strong></td>
                                    <td>
                                        <i class="bi bi-telephone-fill text-primary me-1"></i>@proveedor.Telefono
                                    </td>
                                    <td>
                                        <i class="bi bi-envelope-fill text-info me-1"></i>@proveedor.Email
                                    </td>
                                    <td>@(string.IsNullOrEmpty(proveedor.Direccion) ? "N/A" : proveedor.Direccion)</td>
                                    <td>
                                        @if (proveedor.Estado)
                                        {
                                            <span class="badge bg-success badge-custom">
                                                <i class="bi bi-check-circle me-1"></i>Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger badge-custom">
                                                <i class="bi bi-x-circle me-1"></i>Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-controller="GestionProveedor"
                                               asp-action="Edit"
                                               asp-route-id="@proveedor.ProveedorId"
                                               class="btn btn-warning btn-sm"
                                               title="Editar">
                                                <i class="bi bi-pencil-fill me-1"></i>Editar
                                            </a>
                                            <button type="button"
                                                    class="btn btn-danger btn-sm"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal@(proveedor.ProveedorId)"
                                                    title="Eliminar">
                                                <i class="bi bi-trash-fill me-1"></i>Eliminar
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Modal de confirmación de eliminación -->
                                <div class="modal fade" id="deleteModal@(proveedor.ProveedorId)" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">
                                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                                    Confirmar Eliminación
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p class="fs-5">¿Estás seguro de eliminar este proveedor?</p>
                                                <div class="card bg-light">
                                                    <div class="card-body">
                                                        <p class="mb-1"><strong>Nombre:</strong> @proveedor.Nombre</p>
                                                        <p class="mb-1"><strong>Email:</strong> @proveedor.Email</p>
                                                        <p class="mb-0"><strong>Teléfono:</strong> @proveedor.Telefono</p>
                                                    </div>
                                                </div>
                                                <div class="alert alert-warning mt-3">
                                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                                    <strong>Nota:</strong> Esta acción no se puede deshacer. Si el proveedor tiene productos asociados, no se podrá eliminar.
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                    <i class="bi bi-x-lg me-2"></i>Cancelar
                                                </button>
                                                <form asp-action="Delete" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@proveedor.ProveedorId" />
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash-fill me-2"></i>
                                                        Sí, Eliminar
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center py-5">
                    <i class="bi bi-inbox fa-3x mb-3"></i>
                    <h4>No se encontraron proveedores</h4>
                    @if (!string.IsNullOrWhiteSpace(ViewBag.BuscarActual))
                    {
                        <p>Intenta con otros términos de búsqueda.</p>
                        <a asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-2"></i>Ver todos los proveedores
                        </a>
                    }
                    else
                    {
                        <p>No hay proveedores registrados en el sistema.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>