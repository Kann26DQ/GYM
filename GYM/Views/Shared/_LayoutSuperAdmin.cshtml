@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperAdmin GYM</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            height: 100vh;
            margin: 0;
        }

        /* Sidebar estilo gym */
        .sidebar {
            width: 260px;
            background: #111;
            color: white;
            display: flex;
            flex-direction: column;
            padding: 20px 0;
        }

        .sidebar h2 {
            text-align: center;
            font-weight: bold;
            color: #e63946;
            margin-bottom: 30px;
        }

        .sidebar a {
            color: #ccc;
            text-decoration: none;
            padding: 12px 20px;
            display: block;
            transition: 0.3s;
        }

        .sidebar a:hover {
            background: #e63946;
            color: white;
        }

        .sidebar i {
            margin-right: 10px;
        }

        /* Main */
        .main {
            flex: 1;
            background: #f4f4f9;
            padding: 20px;
            overflow-y: auto;
        }

        .topbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .topbar h3 {
            margin: 0;
            font-weight: bold;
            color: #333;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>GYM Admin 🏋️‍♂️</h2>
        <a asp-controller="SuperAdmin" asp-action="Index"><i class="fa fa-home"></i> Dashboard</a>
        <a asp-controller="Membresias" asp-action="Index"><i class="fa fa-id-card"></i> Membresías</a>
        <a asp-controller="Acceso" asp-action="Logout"><i class="fa fa-sign-out-alt"></i> Salir</a>
    </div>

    <!-- Main -->
    <div class="main">
        <div class="topbar">
            <h3>@ViewData["Title"]</h3>
            <span>👤 SuperAdmin</span>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
