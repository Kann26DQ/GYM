@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperAdmin GYM</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            height: 100vh;
            margin: 0;
        }

        .sidebar {
            width: 260px;
            background: #111;
            color: white;
            display: flex;
            flex-direction: column;
            padding: 20px 0;
        }

            .sidebar h2 {
                text-align: center;
                font-weight: bold;
                color: #e63946;
                margin-bottom: 30px;
            }

            .sidebar a, .sidebar form {
                color: #ccc;
                text-decoration: none;
                padding: 12px 20px;
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover, .sidebar form:hover {
                    background: #e63946;
                    color: white;
                }

            .sidebar i {
                margin-right: 10px;
            }

        .main {
            flex: 1;
            background: #f4f4f9;
            padding: 20px;
            overflow-y: auto;
        }

        .topbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

            .topbar h3 {
                margin: 0;
                font-weight: bold;
                color: #333;
            }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>GYM Admin 🏋️‍♂️</h2>
        <a asp-controller="GestionUsuarios" asp-action="Index"><i class="fa fa-home"></i> Gestion Usuarios</a>
        <a asp-controller="GestionStock" asp-action="Index"><i class="fa fa-boxes"></i> Gestión Stock</a>
        <a asp-controller="Ventas" asp-action="Index"><i class="fa fa-cash-register"></i> Ventas</a>
        <a asp-controller="Membresiaplanes" asp-action="Index"><i class="fa fa-id-card"></i> Membresías</a>

        @* Logout: usar formulario POST con antiforgery para evitar HTTP 405 *@
        <form asp-area="" asp-controller="Acceso" asp-action="Logout" method="post" style="margin:0;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-link text-start w-100 p-0" style="color:inherit; text-decoration:none;">
                <i class="fa fa-sign-out-alt" style="margin-right:10px;"></i> Salir
            </button>
        </form>
    </div>

    <!-- Main -->
    <div class="main">
        <div class="topbar">
            <h3>@ViewData["Title"]</h3>
            <div>
                <a asp-controller="Productos" asp-action="Index" class="btn btn-outline-primary btn-sm me-2">
                    <i class="fa fa-store"></i> Ver Tienda
                </a>
                <span>@User.Identity?.Name</span>
            </div>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>