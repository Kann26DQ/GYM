@using System.Security.Claims
@inject GYM.Services.MembresiaPermisosService PermisosService
@{
    Layout = null;
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var isClienteOrGymbro = isAuthenticated && (User.IsInRole("Cliente") || User.IsInRole("Gymbro"));

    // Obtener userId de forma segura
    var userId = 0;
    if (isAuthenticated)
    {
        var userIdClaim = User.FindFirstValue(ClaimTypes.NameIdentifier);
        if (!string.IsNullOrEmpty(userIdClaim))
        {
            userId = int.Parse(userIdClaim);
        }
    }

    // Obtener permisos
    var tieneRutina = false;
    var tieneAlimentacion = false;

    if (isClienteOrGymbro && userId > 0)
    {
        var permisos = await PermisosService.ObtenerPermisos(userId);
        tieneRutina = permisos.Item1;
        tieneAlimentacion = permisos.Item2;
    }
}
<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - GYM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        /* Navbar Negro y Amarillo */
        .navbar-custom {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            box-shadow: 0 4px 15px rgba(255, 193, 7, 0.3);
            padding: 1rem 0;
        }

            .navbar-custom .navbar-brand {
                color: #ffc107 !important;
                font-weight: bold;
                font-size: 1.8rem;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
                transition: all 0.3s;
            }

                .navbar-custom .navbar-brand:hover {
                    color: #ffed4e !important;
                    transform: scale(1.05);
                }

            .navbar-custom .nav-link {
                color: #f8f9fa !important;
                font-weight: 500;
                padding: 0.7rem 1.2rem !important;
                margin: 0 0.3rem;
                border-radius: 25px;
                transition: all 0.3s;
                position: relative;
                overflow: hidden;
            }

                .navbar-custom .nav-link::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: -100%;
                    width: 100%;
                    height: 100%;
                    background: linear-gradient(90deg, transparent, rgba(255, 193, 7, 0.3), transparent);
                    transition: left 0.5s;
                }

                .navbar-custom .nav-link:hover::before {
                    left: 100%;
                }

                .navbar-custom .nav-link:hover {
                    background: rgba(255, 193, 7, 0.15);
                    color: #ffc107 !important;
                    transform: translateY(-2px);
                }

                .navbar-custom .nav-link.active {
                    background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
                    color: #1a1a1a !important;
                    font-weight: bold;
                    box-shadow: 0 4px 10px rgba(255, 193, 7, 0.4);
                }

        .btn-logout {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white !important;
            border: none;
            padding: 0.7rem 1.5rem !important;
            border-radius: 25px;
            font-weight: 500;
            transition: all 0.3s;
            box-shadow: 0 4px 10px rgba(220, 53, 69, 0.3);
        }

            .btn-logout:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(220, 53, 69, 0.5);
            }

        .navbar-custom .navbar-toggler {
            border-color: #ffc107;
        }

        .navbar-custom .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 193, 7, 1%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        body {
            background: #f5f5f5;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom mb-4">
        <div class="container-fluid px-4">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fa fa-dumbbell me-2"></i>GYM PRO
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    @if (isClienteOrGymbro)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">
                                <i class="fa fa-home me-2"></i>Inicio
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "MiMembresia" ? "active" : "")"
                               asp-controller="MiMembresia" asp-action="Index">
                                <i class="fa fa-id-card me-2"></i>Mi Membresía
                            </a>
                        </li>

                        <!-- 👇 MODIFICADO: Solo mostrar si tiene permiso, de lo contrario no mostrar nada -->
                        @if (tieneRutina)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Rutinas" ? "active" : "")"
                                   asp-controller="Rutinas" asp-action="Index">
                                    <i class="fa fa-dumbbell me-2"></i>Mis Rutinas
                                </a>
                            </li>
                        }

                        <!-- 👇 MODIFICADO: Solo mostrar si tiene permiso, de lo contrario no mostrar nada -->
                        @if (tieneAlimentacion)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "PlanesAlimenticios" ? "active" : "")"
                                   asp-controller="PlanesAlimenticios" asp-action="Index">
                                    <i class="fa fa-utensils me-2"></i>Mi Alimentación
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Productos" ? "active" : "")"
                               asp-controller="Productos" asp-action="Index">
                                <i class="fa fa-store me-2"></i>Tienda
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Cart" ? "active" : "")"
                               asp-controller="Cart" asp-action="Index">
                                <i class="fa fa-shopping-cart me-2"></i>Carrito
                            </a>
                        </li>
                    }

                    @if (isAuthenticated)
                    {
                        <li class="nav-item ms-2">
                            <form asp-controller="Acceso" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-logout">
                                    <i class="fa fa-sign-out-alt me-2"></i>Salir
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Acceso" asp-action="Login">
                                <i class="fa fa-sign-in-alt me-2"></i>Entrar
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>