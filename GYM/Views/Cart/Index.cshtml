@model IEnumerable<GYM.Models.CartItem>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Carrito de Compras";
    var total = ViewBag.Total as decimal? ?? 0m;
}

<style>
    body {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
        min-height: 100vh;
    }

    .hero-section {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 237, 74, 0.05) 100%);
        border-radius: 30px;
        padding: 3rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 193, 7, 0.1) 0%, transparent 70%);
            animation: pulse 4s ease-in-out infinite;
            z-index: 0;
        }

        .hero-section > * {
            position: relative;
            z-index: 1;
        }

    .cart-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid rgba(255, 193, 7, 0.3);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .cart-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 193, 7, 0.05) 0%, transparent 70%);
            z-index: 0;
        }

        .cart-card > * {
            position: relative;
            z-index: 1;
        }

    .cart-item {
        background: rgba(255, 193, 7, 0.05);
        border: 2px solid rgba(255, 193, 7, 0.2);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        transition: all 0.3s;
    }

        .cart-item:hover {
            border-color: #ffc107;
            box-shadow: 0 5px 20px rgba(255, 193, 7, 0.2);
        }

    .text-yellow {
        color: #ffc107;
        text-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
    }

    .text-white-custom {
        color: #f8f9fa;
    }

    .btn-yellow {
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        color: #1a1a1a !important;
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 20px;
        font-weight: bold;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
        text-decoration: none;
        display: inline-block;
    }

        .btn-yellow:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 193, 7, 0.6);
            color: #000 !important;
        }

    .btn-danger-custom {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white !important;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 12px;
        font-weight: bold;
        transition: all 0.3s;
        box-shadow: 0 3px 10px rgba(220, 53, 69, 0.4);
    }

        .btn-danger-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.6);
            background: linear-gradient(135deg, #c82333 0%, #bd2130 100%);
        }

    .btn-outline-yellow {
        background: transparent;
        color: #ffc107 !important;
        border: 2px solid #ffc107;
        padding: 0.8rem 2rem;
        border-radius: 20px;
        font-weight: bold;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }

        .btn-outline-yellow:hover {
            background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
            color: #1a1a1a !important;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 193, 7, 0.6);
        }

    .icon-circle {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #1a1a1a;
        box-shadow: 0 0 30px rgba(255, 193, 7, 0.5);
        animation: float 3s ease-in-out infinite;
        margin-bottom: 1rem;
    }

    .total-card {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.2) 0%, rgba(255, 237, 74, 0.1) 100%);
        border: 3px solid #ffc107;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(255, 193, 7, 0.3);
    }

    .alert-custom-info {
        background: rgba(23, 162, 184, 0.2);
        border: 2px solid #17a2b8;
        border-radius: 15px;
        color: #fff;
    }

    .alert-custom-success {
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.2) 0%, rgba(34, 139, 61, 0.2) 100%);
        border: 2px solid #28a745;
        color: #fff;
        border-radius: 15px;
    }

    .content-wrapper {
        padding-bottom: 150px;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            opacity: 0.5;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }
    }

    .empty-cart {
        text-align: center;
        padding: 4rem 2rem;
    }

        .empty-cart .icon-circle {
            opacity: 0.5;
        }
</style>

<div class="container mt-4 content-wrapper">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="text-center">
            <div class="icon-circle mx-auto">
                <i class="fa fa-shopping-cart"></i>
            </div>
            <h1 class="display-4 text-yellow mb-3">Mi Carrito 🛒</h1>
            <p class="lead text-white-custom">Revisa tus productos antes de finalizar</p>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4">
            <i class="fa fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-custom-success alert-dismissible fade show mb-4">
            <i class="fa fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <!-- Carrito vacío -->
        <div class="cart-card">
            <div class="empty-cart">
                <div class="icon-circle mx-auto">
                    <i class="fa fa-shopping-cart"></i>
                </div>
                <h3 class="text-yellow mb-3">Tu carrito está vacío</h3>
                <p class="text-white-custom mb-4">¡Comienza a agregar productos increíbles!</p>
                <a asp-controller="Productos" asp-action="Index" class="btn btn-yellow">
                    <i class="fa fa-shopping-bag me-2"></i>Ir a la Tienda
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Productos en el carrito -->
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-card">
                    <h4 class="text-yellow mb-4">
                        <i class="fa fa-box me-2"></i>Productos en tu carrito (@Model.Count())
                    </h4>

                    @foreach (var item in Model)
                    {
                        <div class="cart-item">
                            <div class="row align-items-center">
                                <div class="col-md-5">
                                    <h5 class="text-yellow mb-2">@item.Producto.Nombre</h5>
                                    <p class="text-white-custom small mb-0">@item.Producto.Descripcion</p>
                                </div>
                                <div class="col-md-2 text-center">
                                    <p class="text-white-custom mb-1">
                                        <small>Precio</small>
                                    </p>
                                    <h6 class="text-yellow mb-0">S/ @item.Producto.Precio.ToString("0.00")</h6>
                                </div>
                                <div class="col-md-2 text-center">
                                    <p class="text-white-custom mb-1">
                                        <small>Cantidad</small>
                                    </p>
                                    <h6 class="text-white-custom mb-0">@item.Cantidad</h6>
                                </div>
                                <div class="col-md-2 text-center">
                                    <p class="text-white-custom mb-1">
                                        <small>Subtotal</small>
                                    </p>
                                    <h5 class="text-yellow mb-0">S/ @((item.Producto.Precio * item.Cantidad).ToString("0.00"))</h5>
                                </div>
                                <div class="col-md-1 text-center">
                                    <form asp-action="Remove" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                        <button type="submit" class="btn btn-danger-custom btn-sm"
                                                onclick="return confirm('¿Eliminar este producto del carrito?')">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Resumen del pedido -->
            <div class="col-lg-4">
                <div class="total-card">
                    <h4 class="text-yellow mb-4">
                        <i class="fa fa-receipt me-2"></i>Resumen del Pedido
                    </h4>

                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-white-custom">Productos:</span>
                        <span class="text-white-custom">@Model.Count()</span>
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-white-custom">Unidades:</span>
                        <span class="text-white-custom">@Model.Sum(i => i.Cantidad)</span>
                    </div>

                    <hr style="border-color: rgba(255, 193, 7, 0.3);">

                    <div class="d-flex justify-content-between mb-4">
                        <h4 class="text-yellow mb-0">Total:</h4>
                        <h3 class="text-yellow mb-0">S/ @total.ToString("0.00")</h3>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-action="Checkout" class="btn btn-yellow">
                            <i class="fa fa-check-circle me-2"></i>Finalizar Compra
                        </a>
                        <a asp-controller="Productos" asp-action="Index" class="btn btn-outline-yellow">
                            <i class="fa fa-shopping-bag me-2"></i>Seguir Comprando
                        </a>
                    </div>

                    <div class="text-center mt-3">
                        <small class="text-white-custom">
                            <i class="fa fa-shield-alt me-1"></i>Compra 100% segura
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>