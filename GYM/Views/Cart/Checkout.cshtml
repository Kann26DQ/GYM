@model IEnumerable<GYM.Models.CartItem>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Finalizar Compra";
    var total = ViewBag.Total as decimal? ?? 0m;
}

<style>
    body {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
        min-height: 100vh;
    }

    .hero-section {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 237, 74, 0.05) 100%);
        border-radius: 30px;
        padding: 3rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 193, 7, 0.1) 0%, transparent 70%);
            animation: pulse 4s ease-in-out infinite;
            z-index: 0;
        }

        .hero-section > * {
            position: relative;
            z-index: 1;
        }

    .payment-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid rgba(255, 193, 7, 0.3);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .payment-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 193, 7, 0.05) 0%, transparent 70%);
            z-index: 0;
        }

        .payment-card > * {
            position: relative;
            z-index: 1;
        }

    .summary-card {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.2) 0%, rgba(255, 237, 74, 0.1) 100%);
        border: 3px solid #ffc107;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(255, 193, 7, 0.3);
        position: sticky;
        top: 20px;
    }

    .form-control-custom {
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 193, 7, 0.3);
        border-radius: 12px;
        padding: 0.8rem;
        color: #fff;
        transition: all 0.3s;
    }

        .form-control-custom:focus {
            background: rgba(255, 255, 255, 0.15);
            border-color: #ffc107;
            box-shadow: 0 0 15px rgba(255, 193, 7, 0.3);
            color: #fff;
        }

        .form-control-custom::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

    .text-yellow {
        color: #ffc107;
        text-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
    }

    .text-white-custom {
        color: #f8f9fa;
    }

    .btn-yellow {
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        color: #1a1a1a !important;
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 20px;
        font-weight: bold;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
        text-decoration: none;
        display: inline-block;
        width: 100%;
    }

        .btn-yellow:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 193, 7, 0.6);
            color: #000 !important;
        }

    .btn-outline-yellow {
        background: transparent;
        color: #ffc107 !important;
        border: 2px solid #ffc107;
        padding: 0.8rem 2rem;
        border-radius: 20px;
        font-weight: bold;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
        width: 100%;
    }

        .btn-outline-yellow:hover {
            background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
            color: #1a1a1a !important;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 193, 7, 0.6);
        }

    .icon-circle {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #1a1a1a;
        box-shadow: 0 0 30px rgba(255, 193, 7, 0.5);
        animation: float 3s ease-in-out infinite;
        margin-bottom: 1rem;
    }

    .security-badge {
        background: rgba(40, 167, 69, 0.2);
        border: 2px solid #28a745;
        border-radius: 15px;
        padding: 1rem;
        text-align: center;
        margin-top: 1.5rem;
    }

        .security-badge i {
            color: #28a745;
            font-size: 1.5rem;
        }

    .card-logos {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 1rem;
    }

        .card-logos i {
            font-size: 2.5rem;
            color: #ffc107;
            opacity: 0.8;
            transition: all 0.3s;
        }

            .card-logos i:hover {
                opacity: 1;
                transform: scale(1.1);
            }

    .product-summary-item {
        background: rgba(255, 193, 7, 0.05);
        border: 1px solid rgba(255, 193, 7, 0.2);
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 0.75rem;
    }

    .content-wrapper {
        padding-bottom: 150px;
    }

    .form-label-custom {
        color: #ffc107;
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: block;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            opacity: 0.5;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }
    }

    .alert-custom-danger {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.2) 0%, rgba(200, 35, 51, 0.2) 100%);
        border: 2px solid #dc3545;
        color: #fff;
        border-radius: 15px;
    }
</style>

<div class="container mt-4 content-wrapper">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="text-center">
            <div class="icon-circle mx-auto">
                <i class="fa fa-credit-card"></i>
            </div>
            <h1 class="display-4 text-yellow mb-3">Finalizar Compra 💳</h1>
            <p class="lead text-white-custom">Completa tu información de pago de forma segura</p>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-custom-danger alert-dismissible fade show mb-4">
            <i class="fa fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Formulario de pago -->
        <div class="col-lg-7">
            <div class="payment-card">
                <h4 class="text-yellow mb-4">
                    <i class="fa fa-lock me-2"></i>Información de Pago
                </h4>

                <form asp-action="ProcessCheckout" method="post" id="paymentForm">
                    @Html.AntiForgeryToken()

                    <div class="mb-4">
                        <label class="form-label-custom">
                            <i class="fa fa-credit-card me-2"></i>Número de Tarjeta
                        </label>
                        <input type="text"
                               class="form-control form-control-custom"
                               id="numeroTarjeta"
                               name="numeroTarjeta"
                               placeholder="1234 5678 9012 3456"
                               maxlength="19"
                               required
                               pattern="\d{4}\s?\d{4}\s?\d{4}\s?\d{4}">
                        <small class="text-white-custom">
                            <i class="fa fa-info-circle me-1"></i>Ingrese los 16 dígitos de su tarjeta
                        </small>
                    </div>

                    <div class="mb-4">
                        <label class="form-label-custom">
                            <i class="fa fa-user me-2"></i>Nombre del Titular
                        </label>
                        <input type="text"
                               class="form-control form-control-custom"
                               id="nombreTitular"
                               name="nombreTitular"
                               placeholder="Como aparece en la tarjeta"
                               required>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label-custom">
                                <i class="fa fa-calendar me-2"></i>Fecha de Expiración
                            </label>
                            <input type="text"
                                   class="form-control form-control-custom"
                                   id="fechaExpiracion"
                                   name="fechaExpiracion"
                                   placeholder="MM/AA"
                                   maxlength="5"
                                   required
                                   pattern="\d{2}/\d{2}">
                        </div>

                        <div class="col-md-6 mb-4">
                            <label class="form-label-custom">
                                <i class="fa fa-shield-alt me-2"></i>CVV
                            </label>
                            <input type="text"
                                   class="form-control form-control-custom"
                                   id="cvv"
                                   name="cvv"
                                   placeholder="123"
                                   maxlength="3"
                                   required
                                   pattern="\d{3}">
                        </div>
                    </div>

                    <div class="card-logos">
                        <i class="fa fa-cc-visa"></i>
                        <i class="fa fa-cc-mastercard"></i>
                        <i class="fa fa-cc-amex"></i>
                    </div>

                    <div class="security-badge">
                        <i class="fa fa-shield-check"></i>
                        <p class="text-white-custom mb-0 mt-2">
                            <strong>Transacción 100% segura y encriptada</strong>
                        </p>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-yellow">
                            <i class="fa fa-check-circle me-2"></i>Confirmar Pago
                        </button>
                        <a asp-action="Index" class="btn btn-outline-yellow">
                            <i class="fa fa-arrow-left me-2"></i>Volver al Carrito
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Resumen del pedido -->
        <div class="col-lg-5">
            <div class="summary-card">
                <h4 class="text-yellow mb-4">
                    <i class="fa fa-receipt me-2"></i>Resumen de tu Compra
                </h4>

                <h6 class="text-yellow mb-3">Productos:</h6>
                @foreach (var item in Model)
                {
                    <div class="product-summary-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-white-custom mb-1">
                                    <strong>@item.Producto.Nombre</strong>
                                </p>
                                <p class="text-white-custom small mb-0">
                                    Cantidad: @item.Cantidad × S/ @item.Producto.Precio.ToString("0.00")
                                </p>
                            </div>
                            <p class="text-yellow mb-0">
                                <strong>S/ @((item.Producto.Precio * item.Cantidad).ToString("0.00"))</strong>
                            </p>
                        </div>
                    </div>
                }

                <hr style="border-color: rgba(255, 193, 7, 0.5); margin: 1.5rem 0;">

                <div class="d-flex justify-content-between mb-2">
                    <span class="text-white-custom">Subtotal:</span>
                    <span class="text-white-custom">S/ @total.ToString("0.00")</span>
                </div>

                <div class="d-flex justify-content-between mb-2">
                    <span class="text-white-custom">Envío:</span>
                    <span class="text-yellow">GRATIS</span>
                </div>

                <hr style="border-color: rgba(255, 193, 7, 0.5); margin: 1rem 0;">

                <div class="d-flex justify-content-between mb-4">
                    <h4 class="text-yellow mb-0">Total:</h4>
                    <h3 class="text-yellow mb-0">S/ @total.ToString("0.00")</h3>
                </div>

                <div class="text-center">
                    <small class="text-white-custom">
                        <i class="fa fa-truck me-1"></i>
                        Entrega estimada: 3-5 días hábiles
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Formatear número de tarjeta
        document.getElementById('numeroTarjeta').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\s/g, '');
            let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
            e.target.value = formattedValue;
        });

        // Formatear fecha de expiración
        document.getElementById('fechaExpiracion').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.slice(0, 2) + '/' + value.slice(2, 4);
            }
            e.target.value = value;
        });

        // Solo números en CVV
        document.getElementById('cvv').addEventListener('input', function (e) {
            e.target.value = e.target.value.replace(/\D/g, '');
        });

        // Validación del formulario
        document.getElementById('paymentForm').addEventListener('submit', function (e) {
            const numeroTarjeta = document.getElementById('numeroTarjeta').value.replace(/\s/g, '');
            const cvv = document.getElementById('cvv').value;

            if (numeroTarjeta.length !== 16) {
                e.preventDefault();
                alert('⚠️ El número de tarjeta debe tener 16 dígitos');
                return false;
            }

            if (cvv.length !== 3) {
                e.preventDefault();
                alert('⚠️ El CVV debe tener 3 dígitos');
                return false;
            }

            // Mostrar loading
            const submitBtn = e.target.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i>Procesando...';
            submitBtn.disabled = true;
        });
    </script>
}