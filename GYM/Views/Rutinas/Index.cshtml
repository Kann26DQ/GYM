@model List<GYM.Models.Rutina>
@{
    ViewData["Title"] = "Mis Rutinas";
}

<style>
    body {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
        min-height: 100vh;
    }

    .hero-section {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 237, 74, 0.05) 100%);
        border-radius: 30px;
        padding: 3rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 193, 7, 0.1) 0%, transparent 70%);
            animation: pulse 4s ease-in-out infinite;
        }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            opacity: 0.5;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }
    }

    .rutina-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid rgba(255, 193, 7, 0.3);
        border-radius: 20px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        transition: all 0.3s;
        position: relative;
    }

        .rutina-card:hover {
            border-color: #ffc107;
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(255, 193, 7, 0.3);
        }

        .rutina-card.activa {
            border-color: #28a745;
        }

        .rutina-card.inactiva {
            opacity: 0.6;
            border-color: #6c757d;
        }

    .badge-nivel {
        padding: 0.5rem 1rem;
        border-radius: 15px;
        font-weight: bold;
        font-size: 0.9rem;
    }

    .badge-principiante {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
    }

    .badge-intermedio {
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        color: #1a1a1a;
    }

    .badge-avanzado {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
    }

    .text-yellow {
        color: #ffc107;
        text-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
    }

    .text-white-custom {
        color: #f8f9fa;
    }

    .btn-yellow {
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        color: #1a1a1a;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 20px;
        font-weight: bold;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
    }

        .btn-yellow:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 193, 7, 0.6);
            color: #000;
        }

    .icon-circle {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #1a1a1a;
        box-shadow: 0 0 30px rgba(255, 193, 7, 0.5);
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .content-wrapper {
        padding-bottom: 120px;
    }
</style>

<div class="container mt-4 content-wrapper">
    <!-- Hero Section -->
    <div class="hero-section position-relative">
        <div class="text-center">
            <div class="icon-circle mb-4">
                <i class="fa fa-dumbbell"></i>
            </div>
            <h1 class="display-4 text-yellow mb-3">Mis Rutinas</h1>
            <p class="lead text-white-custom">Rutinas personalizadas diseñadas para ti</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-dismissible fade show" style="background: linear-gradient(135deg, rgba(40, 167, 69, 0.2) 0%, rgba(34, 139, 61, 0.2) 100%); border: 2px solid #28a745; color: #fff; border-radius: 15px;">
            <i class="fa fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-dismissible fade show" style="background: linear-gradient(135deg, rgba(220, 53, 69, 0.2) 0%, rgba(200, 35, 51, 0.2) 100%); border: 2px solid #dc3545; color: #fff; border-radius: 15px;">
            <i class="fa fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var rutina in Model)
            {
                var claseEstado = rutina.Activa ? "activa" : "inactiva";
                var badgeNivel = rutina.NivelDificultad == "Principiante" ? "badge-principiante" :
                rutina.NivelDificultad == "Intermedio" ? "badge-intermedio" : "badge-avanzado";

                <div class="col-md-6 col-lg-4">
                    <div class="rutina-card @claseEstado">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h4 class="text-yellow mb-0">@rutina.Nombre</h4>
                            <span class="badge @badgeNivel">@rutina.NivelDificultad</span>
                        </div>

                        <div class="text-white-custom mb-2">
                            <i class="fa fa-tag me-2 text-yellow"></i>
                            <strong>Tipo:</strong> @rutina.Tipo
                        </div>

                        <div class="text-white-custom mb-2">
                            <i class="fa fa-calendar me-2 text-yellow"></i>
                            <strong>Duración:</strong> @rutina.DuracionSemanas semanas
                        </div>

                        @if (rutina.FechaInicio.HasValue && rutina.FechaFin.HasValue)
                        {
                            <div class="text-white-custom mb-2">
                                <i class="fa fa-clock me-2 text-yellow"></i>
                                <strong>Periodo:</strong> @rutina.FechaInicio.Value.ToString("dd/MM/yyyy") - @rutina.FechaFin.Value.ToString("dd/MM/yyyy")
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(rutina.Descripcion))
                        {
                            <div class="text-white-custom mb-3 small">
                                <i class="fa fa-info-circle me-2 text-yellow"></i>
                                @rutina.Descripcion
                            </div>
                        }

                        @if (rutina.Empleado != null)
                        {
                            <div class="text-muted small mb-3">
                                <i class="fa fa-user-tie me-1"></i>
                                Creada por: @rutina.Empleado.Nombre
                            </div>
                        }

                        @if (rutina.EvaluacionBase != null)
                        {
                            <div class="alert alert-info p-2 mb-3 small" style="background: rgba(23, 162, 184, 0.2); border: 1px solid #17a2b8;">
                                <i class="fa fa-chart-line me-1"></i>
                                <strong>Evaluación:</strong> Promedio @rutina.EvaluacionBase.PromedioRendimiento.ToString("F1")/10
                            </div>
                        }

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Detalles" asp-route-id="@rutina.RutinaId" class="btn btn-yellow btn-sm">
                                <i class="fa fa-eye me-1"></i>Ver Detalles
                            </a>

                            @if (rutina.Activa)
                            {
                                <span class="badge bg-success">
                                    <i class="fa fa-check-circle me-1"></i>Activa
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fa fa-ban me-1"></i>Finalizada
                                </span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fa fa-dumbbell text-yellow mb-4" style="font-size: 5rem; opacity: 0.3;"></i>
            <h3 class="text-white-custom mb-3">No tienes rutinas asignadas</h3>
            <p class="text-muted mb-4">
                Solicita al equipo del gimnasio que te asignen una rutina personalizada basada en tus objetivos.
            </p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-yellow">
                <i class="fa fa-home me-2"></i>Volver al Inicio
            </a>
        </div>
    }
</div>

<!-- Espaciador para barra de Somee -->
<div style="height: 150px;"></div>