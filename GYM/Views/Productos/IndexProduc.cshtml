@model IEnumerable<GYM.Models.Producto>

@{
    Layout = "_Layout"; // ajusta si tu layout público se llama distinto
    ViewData["Title"] = "Productos disponibles";
}

<h2 class="my-4">Productos disponibles</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay productos disponibles por el momento.</div>
}
else
{
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@p.Nombre</h5>
                        <p class="card-text">@p.Descripcion</p>
                        <p><strong>Precio:</strong> S/ @p.Precio.ToString("0.00")</p>
                        <p><strong>Stock:</strong> @p.Stock</p>
                        <a asp-controller="Productos" asp-action="Details" asp-route-id="@p.ProductoId" class="btn btn-primary">Ver / Comprar</a>
                    </div>
                </div>
            </div>
        }
    </div>
}