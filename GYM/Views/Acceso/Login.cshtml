@{
    Layout = null;
}
@model GYM.ViewModels.LoginVM

<head>
    <meta charset="utf-8" />
    <title>Login - GYM</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)),
                        url("https://images.unsplash.com/photo-1571019613914-85f342c9b30e") no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card-custom {
            backdrop-filter: blur(10px);
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 1.5rem;
            padding: 2rem;
            box-shadow: 0 8px 20px rgba(0,0,0,0.5);
            color: white;
        }

        .card-header {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ffc107;
            text-align: center;
            margin-bottom: 1rem;
        }

        .form-label {
            font-weight: 600;
            color: #f8f9fa;
        }

        .form-control {
            border-radius: 0.75rem;
            padding: 0.7rem;
        }

        .btn-warning {
            border-radius: 0.75rem;
            font-weight: bold;
            transition: 0.3s;
        }

        .btn-warning:hover {
            background-color: #ffcd39;
        }

        a {
            color: #ffc107;
            font-weight: bold;
        }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card-custom" style="max-width: 400px; width: 100%;">
        <div class="card-header">
            <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
        </div>
        <form asp-controller="Acceso" asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Correo electrónico</label>
                <input class="form-control" type="text" placeholder="Correo" required asp-for="Email" />
            </div>
            <div class="mb-3">
                <label asp-for="password" class="form-label">Contraseña</label>
                <input class="form-control" type="password" placeholder="Contraseña" required asp-for="password" />
            </div>
            <div class="d-grid">
                <button class="btn btn-warning" type="submit"><i class="bi bi-person-fill me-2"></i>Ingresar</button>
            </div>

            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewData["Mensaje"]
                </div>
            }

            <div class="text-center mt-3">
                ¿No tienes una cuenta? <a asp-controller="Acceso" asp-action="Register">Registrarse</a>
            </div>
        </form>
    </div>
</body>
