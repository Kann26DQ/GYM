@{
    Layout = null;
}
@model GYM.ViewModels.UsuarioVM

<head>
    <meta charset="utf-8" />
    <title>Registro - GYM</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url("https://images.unsplash.com/photo-1571019613914-85f342c9b30e") no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .card-custom { backdrop-filter: blur(10px); background-color: rgba(0,0,0,0.7); border-radius: 1.5rem; padding: 2rem; box-shadow: 0 8px 20px rgba(0,0,0,0.5); color: white; }
        .card-header { font-size: 1.5rem; font-weight: bold; color: #ffc107; text-align: center; margin-bottom: 1rem; }
        .form-label { font-weight: 600; color: #f8f9fa; }
        .form-control { border-radius: 0.75rem; padding: 0.7rem; }
        .btn-warning { border-radius: 0.75rem; font-weight: bold; transition: 0.3s; }
        .btn-warning:hover { background-color: #ffcd39; }
        a { color: #ffc107; font-weight: bold; }
    </style>
</head>

<body class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card-custom" style="max-width: 420px; width: 100%;">
        <div class="card-header">
            <i class="bi bi-person-plus-fill me-2"></i> Crear Cuenta
        </div>

        <form asp-controller="Acceso" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" placeholder="Tu nombre completo" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Correo electrónico</label>
                <input asp-for="Email" type="email" class="form-control"
                       placeholder="ejemplo@correo.com"
                       pattern="^[^&#64;\s]+&#64;[^&#64;\s]+\.com$"
                       title="Debe ser un correo válido que termine en .com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="Password" class="form-label">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Mínimo 8 caracteres" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmarPassword" class="form-label">Confirmar contraseña</label>
                <input asp-for="ConfirmarPassword" type="password" class="form-control" placeholder="Repite tu contraseña" />
                <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label">Teléfono</label>
                <input asp-for="Telefono" class="form-control"
                       type="tel" inputmode="numeric" maxlength="9"
                       pattern="^[0-9]{9}$"
                       title="Debe contener exactamente 9 dígitos" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-check-circle me-2"></i> Registrarme
                </button>
            </div>

            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewData["Mensaje"]
                </div>
            }

            <div class="text-center mt-3">
                ¿Ya tienes cuenta? <a asp-controller="Acceso" asp-action="Login">Inicia sesión</a>
            </div>
        </form>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>