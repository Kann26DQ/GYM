@{
    Layout = null;
}
@model GYM.ViewModels.UsuarioVM

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Registro - GYM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), 
                        url("https://images.unsplash.com/photo-1571019613914-85f342c9b30e") no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }
        .card-custom { 
            backdrop-filter: blur(10px); 
            background-color: rgba(0,0,0,0.7); 
            border-radius: 1.5rem; 
            padding: 2rem; 
            box-shadow: 0 8px 20px rgba(0,0,0,0.5); 
            color: white; 
        }
        .card-header { 
            font-size: 1.5rem; 
            font-weight: bold; 
            color: #ffc107; 
            text-align: center; 
            margin-bottom: 1rem; 
        }
        .form-label { 
            font-weight: 600; 
            color: #f8f9fa; 
        }
        .form-control { 
            border-radius: 0.75rem; 
            padding: 0.7rem; 
        }
        .btn-warning { 
            border-radius: 0.75rem; 
            font-weight: bold; 
            transition: 0.3s; 
        }
        .btn-warning:hover { 
            background-color: #ffcd39; 
        }
        a { 
            color: #ffc107; 
            font-weight: bold; 
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        .text-danger {
            color: #ff6b6b !important;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
    </style>
</head>

<body class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card-custom" style="max-width: 420px; width: 100%;">
        <div class="card-header">
            <i class="bi bi-person-plus-fill me-2"></i> Crear Cuenta
        </div>

        <form asp-controller="Acceso" asp-action="Register" method="post" id="registerForm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" placeholder="Tu nombre completo" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Correo electrónico</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="ejemplo@correo.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Mínimo 8 caracteres" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmarPassword" class="form-label">Confirmar contraseña</label>
                <input asp-for="ConfirmarPassword" type="password" class="form-control" placeholder="Repite tu contraseña" />
                <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label">Teléfono</label>
                <input asp-for="Telefono" class="form-control" type="tel" placeholder="9 dígitos" maxlength="9" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-check-circle me-2"></i> Registrarme
                </button>
            </div>

            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewData["Mensaje"]
                </div>
            }

            <div class="text-center mt-3">
                ¿Ya tienes cuenta? <a asp-controller="Acceso" asp-action="Login">Inicia sesión</a>
            </div>
        </form>
    </div>

    <!-- Scripts necesarios -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>