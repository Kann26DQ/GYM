@model IEnumerable<GYM.Models.Venta>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Mis compras";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="my-0">Mis compras</h2>
    <a asp-controller="Cart" asp-action="Productos" class="btn btn-primary btn-sm">Ir a la tienda</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Aún no tienes compras registradas.</div>
}
else
{
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Fecha</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td>@v.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>S/ @v.Total.ToString("0.00")</td>
                    <td>
                        <a asp-controller="MisCompras" asp-action="Details" asp-route-id="@v.VentaId" class="btn btn-sm btn-outline-primary">Ver detalle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}