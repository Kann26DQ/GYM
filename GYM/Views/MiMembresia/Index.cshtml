@using GYM.Models
@{
    ViewData["Title"] = "Mi Membresía";
    var membresiaActual = ViewData["MembresiaActual"] as MembresiaUsuario;
    var tienePlanMasCaro = (bool)(ViewData["TienePlanMasCaro"] ?? false);
    var planesSuperiores = ViewData["PlanesSuperiores"] as List<MembresiaPlan> ?? new List<MembresiaPlan>();
    var nombreUsuario = User.Identity?.Name ?? "Usuario";
}

<style>
    body {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
        min-height: 100vh;
    }

    .hero-section {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 237, 74, 0.05) 100%);
        border-radius: 30px;
        padding: 3rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 193, 7, 0.1) 0%, transparent 70%);
            animation: pulse 4s ease-in-out infinite;
            z-index: 0;
        }

        .hero-section > * {
            position: relative;
            z-index: 1;
        }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            opacity: 0.5;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }
    }

    .membresia-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid #ffc107;
        border-radius: 25px;
        padding: 2.5rem;
        box-shadow: 0 10px 40px rgba(255, 193, 7, 0.3);
        position: relative;
        overflow: hidden;
        transition: all 0.4s;
    }

        .membresia-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 193, 7, 0.1), transparent);
            transition: left 0.6s;
            z-index: 0;
        }

        .membresia-card > * {
            position: relative;
            z-index: 1;
        }

        .membresia-card:hover::before {
            left: 100%;
        }

        .membresia-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 50px rgba(255, 193, 7, 0.5);
            border-color: #ffed4e;
        }

    .plan-upgrade-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid rgba(255, 193, 7, 0.3);
        border-radius: 20px;
        transition: all 0.3s;
        overflow: hidden;
        position: relative;
        margin-bottom: 1.5rem;
    }

        .plan-upgrade-card:hover {
            border-color: #ffc107;
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(255, 193, 7, 0.4);
        }

        .plan-upgrade-card::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100px;
            height: 100px;
            background: radial-gradient(circle, rgba(255, 193, 7, 0.2) 0%, transparent 70%);
            border-radius: 50%;
            transform: translate(50%, -50%);
        }

    /* ✅ NUEVO: Badge de descuento */
    .badge-discount {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        font-weight: bold;
        padding: 0.8rem 1.5rem;
        border-radius: 20px;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.4);
        animation: pulse-discount 2s ease-in-out infinite;
    }

    @@keyframes pulse-discount {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    .badge-yellow {
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        color: #1a1a1a;
        font-weight: bold;
        padding: 0.6rem 1.2rem;
        border-radius: 20px;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
    }

    .text-yellow {
        color: #ffc107;
        text-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
    }

    .text-white-custom {
        color: #f8f9fa;
    }

    .btn-yellow {
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        color: #1a1a1a !important;
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 25px;
        font-weight: bold;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
        text-decoration: none;
        display: inline-block;
    }

        .btn-yellow:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(255, 193, 7, 0.6);
            color: #000 !important;
        }

    .btn-outline-yellow {
        background: transparent;
        color: #ffc107 !important;
        border: 2px solid #ffc107;
        padding: 0.8rem 2rem;
        border-radius: 25px;
        font-weight: bold;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }

        .btn-outline-yellow:hover {
            background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
            color: #1a1a1a !important;
            border-color: #ffed4e;
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(255, 193, 7, 0.6);
        }

    /* ✅ NUEVO: Botón de cancelar */
    .btn-danger-custom {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white !important;
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 25px;
        font-weight: bold;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.4);
        text-decoration: none;
        display: inline-block;
    }

        .btn-danger-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(220, 53, 69, 0.6);
            background: linear-gradient(135deg, #c82333 0%, #bd2130 100%);
        }

    .progress-bar-custom {
        background: linear-gradient(90deg, #ffc107 0%, #ffed4e 100%);
        box-shadow: 0 0 20px rgba(255, 193, 7, 0.6);
    }

    .icon-circle {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #1a1a1a;
        box-shadow: 0 0 30px rgba(255, 193, 7, 0.5);
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .divider-yellow {
        height: 3px;
        background: linear-gradient(90deg, transparent, #ffc107, transparent);
        border: none;
        margin: 2rem 0;
    }

    .content-wrapper {
        padding-bottom: 120px;
    }

    .plans-section {
        margin-bottom: 3rem;
    }

    /* ✅ NUEVO: Card de descuento destacado */
    .discount-info-card {
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.2) 0%, rgba(32, 201, 151, 0.1) 100%);
        border: 2px solid #28a745;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .alert-custom-success {
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.2) 0%, rgba(34, 139, 61, 0.2) 100%);
        border: 2px solid #28a745;
        color: #fff;
        border-radius: 15px;
    }
</style>

<div class="container mt-4 content-wrapper">
    <!-- Hero Section -->
    <div class="hero-section position-relative">
        <div class="text-center">
            <div class="icon-circle mb-4">
                <i class="fa fa-id-card"></i>
            </div>
            <h1 class="display-4 text-yellow mb-3">Mi Membresía</h1>
            <p class="lead text-white-custom">Gestiona tu plan y mantente al día con tus beneficios</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-custom-success alert-dismissible fade show">
            <i class="fa fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-dismissible fade show" style="background: linear-gradient(135deg, rgba(220, 53, 69, 0.2) 0%, rgba(200, 35, 51, 0.2) 100%); border: 2px solid #dc3545; color: #fff; border-radius: 15px;">
            <i class="fa fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (membresiaActual != null)
    {
        var diasRestantes = (membresiaActual.FechaFin - DateTime.UtcNow).Days;
        var totalDias = (membresiaActual.FechaFin - membresiaActual.FechaInicio).Days;
        var progreso = totalDias > 0 ? (int)((totalDias - diasRestantes) * 100.0 / totalDias) : 0;

        <!-- Membresía Actual -->
        <div class="membresia-card mb-5">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h3 class="text-yellow mb-3">
                        <i class="fa fa-star me-2"></i>@membresiaActual.Plan?.Nombre
                    </h3>
                    <p class="text-white-custom mb-4">@membresiaActual.Plan?.Descripcion</p>

                    <div class="row mb-4">
                        <div class="col-md-4 mb-3">
                            <small class="text-muted">Precio Pagado</small>
                            <h4 class="text-yellow mb-0">S/ @membresiaActual.Precio.ToString("0.00")</h4>
                        </div>
                        <div class="col-md-4 mb-3">
                            <small class="text-muted">Fecha Inicio</small>
                            <h5 class="text-white-custom mb-0">@membresiaActual.FechaInicio.ToString("dd/MM/yyyy")</h5>
                        </div>
                        <div class="col-md-4 mb-3">
                            <small class="text-muted">Fecha Vencimiento</small>
                            <h5 class="text-white-custom mb-0">@membresiaActual.FechaFin.ToString("dd/MM/yyyy")</h5>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-white-custom">Días Restantes: <strong class="text-yellow">@diasRestantes días</strong></span>
                            <span class="text-muted">@progreso% usado</span>
                        </div>
                        <div class="progress" style="height: 12px; border-radius: 10px; background: rgba(255, 193, 7, 0.2);">
                            <div class="progress-bar progress-bar-custom" role="progressbar" style="width: @progreso%;" aria-valuenow="@progreso" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                    <div class="d-flex gap-3 flex-wrap mb-4">
                        @if (membresiaActual.Plan?.PermiteRutina == true)
                        {
                            <span class="badge-yellow">
                                <i class="fa fa-dumbbell me-1"></i>Rutinas Personalizadas
                            </span>
                        }
                        @if (membresiaActual.Plan?.PermiteAlimentacion == true)
                        {
                            <span class="badge-yellow">
                                <i class="fa fa-utensils me-1"></i>Plan Alimenticio
                            </span>
                        }
                    </div>

                    @* ✅ NUEVO: Botón de cancelar suscripción *@
                    <div class="mt-3">
                        <button type="button" class="btn btn-danger-custom" data-bs-toggle="modal" data-bs-target="#modalCancelar">
                            <i class="fa fa-times-circle me-2"></i>Cancelar Suscripción
                        </button>
                    </div>
                </div>

                <div class="col-md-4 text-center">
                    <div style="width: 150px; height: 150px; margin: 0 auto; background: conic-gradient(#ffc107 0% @progreso%, rgba(255, 193, 7, 0.2) @progreso% 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <div style="width: 120px; height: 120px; background: #1a1a1a; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-direction: column;">
                            <h2 class="text-yellow mb-0">@diasRestantes</h2>
                            <small class="text-muted">días</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr class="divider-yellow" />

        @if (tienePlanMasCaro)
        {
            <!-- Ya tiene el plan más caro -->
            <div class="text-center py-5 mb-5">
                <div class="icon-circle mb-4" style="width: 100px; height: 100px; font-size: 2.5rem;">
                    <i class="fa fa-crown"></i>
                </div>
                <h2 class="text-yellow mb-3">¡Felicidades!</h2>
                <p class="lead text-white-custom mb-4">Ya cuentas con nuestro plan más completo</p>
                <div class="alert" style="background: linear-gradient(135deg, rgba(255, 193, 7, 0.2) 0%, rgba(255, 237, 74, 0.1) 100%); border: 2px solid #ffc107; border-radius: 20px;">
                    <p class="text-white-custom mb-0">
                        <i class="fa fa-info-circle me-2 text-yellow"></i>
                        Disfruta de todos los beneficios premium de nuestro gimnasio
                    </p>
                </div>
            </div>
        }
        else if (planesSuperiores.Any())
        {
            @* ✅ NUEVO: Información de descuento proporcional *@
            @if (diasRestantes > 0)
            {
                var valorRestante = (membresiaActual.Precio / totalDias) * diasRestantes;

                <div class="discount-info-card">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="text-white-custom mb-2">
                                <i class="fa fa-gift me-2 text-success"></i>¡Mejora Ahora y Ahorra!
                            </h5>
                            <p class="text-white-custom mb-0">
                                Tienes <strong>@diasRestantes días</strong> restantes en tu plan actual (S/ @valorRestante.ToString("0.00") de valor).
                                Al mejorar ahora, <strong>ese valor se descontará automáticamente</strong> del nuevo plan.
                            </p>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="badge-discount">
                                <i class="fa fa-percent me-1"></i>-S/ @valorRestante.ToString("0.00")
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Mostrar planes para upgrade -->
            <div class="text-center mb-5">
                <h2 class="text-yellow mb-2">Mejora tu Experiencia</h2>
                <p class="text-white-custom">Descubre los beneficios de nuestros planes superiores</p>
            </div>

            <div class="row g-4 plans-section">
                @foreach (var plan in planesSuperiores)
                {
                    var precioFinal = plan.Precio;
                    var descuento = 0m;

                    @* ✅ Calcular descuento proporcional *@
                    if (diasRestantes > 0)
                    {
                        descuento = (membresiaActual.Precio / totalDias) * diasRestantes;
                        precioFinal = plan.Precio - descuento;
                    }

                    <div class="col-md-6 col-lg-4">
                        <div class="plan-upgrade-card h-100">
                            <div class="card-body p-4">
                                @* ✅ Mostrar badge de descuento si aplica *@
                                @if (descuento > 0)
                                {
                                    <div class="text-center mb-3">
                                        <span class="badge bg-success">
                                            <i class="fa fa-tag me-1"></i>Ahorro: S/ @descuento.ToString("0.00")
                                        </span>
                                    </div>
                                }

                                <div class="text-center mb-4">
                                    <h4 class="text-yellow mb-3">@plan.Nombre</h4>

                                    @if (descuento > 0)
                                    {
                                        <p class="text-muted mb-1">
                                            <small><s>S/ @plan.Precio.ToString("0.00")</s></small>
                                        </p>
                                        <h2 class="text-yellow mb-0">S/ @precioFinal.ToString("0.00")</h2>
                                        <small class="text-success">
                                            <i class="fa fa-check-circle me-1"></i>Con descuento aplicado
                                        </small>
                                    }
                                    else
                                    {
                                        <h2 class="text-yellow mb-0">S/ @plan.Precio.ToString("0.00")</h2>
                                    }

                                    <small class="text-muted d-block mt-1">/@plan.DuracionDias días</small>
                                </div>

                                <p class="text-white-custom mb-4">@plan.Descripcion</p>

                                <h6 class="text-yellow mb-3">Beneficios:</h6>
                                <ul class="list-unstyled text-white-custom mb-4">
                                    @foreach (var beneficio in plan.Beneficios)
                                    {
                                        <li class="mb-2">
                                            <i class="fa fa-check-circle text-yellow me-2"></i>@beneficio
                                        </li>
                                    }
                                </ul>

                                @* ✅ NUEVO: Enviar flag para aplicar mejora inmediata *@
                                <form asp-controller="Membresias" asp-action="IniciarMejora" method="post" class="mb-3">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="planId" value="@plan.MembresiaPlanId" />
                                    <input type="hidden" name="aplicarInmediato" value="true" />
                                    <button type="submit" class="btn btn-yellow w-100">
                                        <i class="fa fa-rocket me-2"></i>Mejorar Ahora
                                    </button>
                                </form>

                                @if (descuento > 0)
                                {
                                    <small class="text-white-custom text-center d-block">
                                        <i class="fa fa-info-circle me-1"></i>
                                        Se aplicará automáticamente
                                    </small>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <!-- Sin membresía activa -->
        <div class="text-center py-5 mb-5">
            <div class="icon-circle mb-4" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                <i class="fa fa-exclamation-triangle"></i>
            </div>
            <h2 class="text-white-custom mb-3">No tienes una membresía activa</h2>
            <p class="lead text-muted mb-4">Adquiere un plan para disfrutar de todos nuestros beneficios</p>
            <a asp-controller="Membresias" asp-action="Store" class="btn btn-yellow btn-lg mb-4">
                <i class="fa fa-shopping-cart me-2"></i>Ver Planes Disponibles
            </a>
        </div>
    }
</div>

@* ✅ NUEVO: Modal de confirmación para cancelar *@
<div class="modal fade" id="modalCancelar" tabindex="-1" aria-labelledby="modalCancelarLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%); border: 2px solid #dc3545; border-radius: 20px;">
            <div class="modal-header border-0">
                <h5 class="modal-title text-yellow" id="modalCancelarLabel">
                    <i class="fa fa-exclamation-triangle me-2"></i>Cancelar Suscripción
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-white-custom">
                    ¿Estás seguro de que deseas cancelar tu membresía actual?
                </p>
                <div class="alert" style="background: rgba(220, 53, 69, 0.2); border: 2px solid #dc3545; border-radius: 15px;">
                    <p class="text-white-custom mb-2">
                        <strong>⚠️ Consecuencias:</strong>
                    </p>
                    <ul class="text-white-custom mb-0">
                        <li>Perderás acceso a tus rutinas personalizadas</li>
                        <li>Se cancelará tu plan alimenticio</li>
                        <li>No podrás reservar sesiones de entrenamiento</li>
                        <li>Esta acción es <strong>irreversible</strong></li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-yellow" data-bs-dismiss="modal">
                    <i class="fa fa-times me-2"></i>No, mantener mi membresía
                </button>
                <form asp-controller="Membresias" asp-action="CancelarMembresia" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger-custom">
                        <i class="fa fa-check me-2"></i>Sí, cancelar ahora
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Espaciador aumentado para evitar que la barra de Somee tape contenido -->
<div style="height: 150px;"></div>