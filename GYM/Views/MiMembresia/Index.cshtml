@using GYM.Models
@{
    ViewData["Title"] = "Mi Membresía";
    var membresiaActual = ViewData["MembresiaActual"] as MembresiaUsuario;
    var tienePlanMasCaro = (bool)(ViewData["TienePlanMasCaro"] ?? false);
    var planesSuperiores = ViewData["PlanesSuperiores"] as List<MembresiaPlan> ?? new List<MembresiaPlan>();
    var nombreUsuario = User.Identity?.Name ?? "Usuario";
}

<style>
    body {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
        min-height: 100vh;
    }

    .hero-section {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 237, 74, 0.05) 100%);
        border-radius: 30px;
        padding: 3rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 193, 7, 0.1) 0%, transparent 70%);
            animation: pulse 4s ease-in-out infinite;
        }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            opacity: 0.5;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }
    }

    .membresia-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid #ffc107;
        border-radius: 25px;
        padding: 2.5rem;
        box-shadow: 0 10px 40px rgba(255, 193, 7, 0.3);
        position: relative;
        overflow: hidden;
        transition: all 0.4s;
    }

        .membresia-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 193, 7, 0.1), transparent);
            transition: left 0.6s;
        }

        .membresia-card:hover::before {
            left: 100%;
        }

        .membresia-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 50px rgba(255, 193, 7, 0.5);
            border-color: #ffed4e;
        }

    .plan-upgrade-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid rgba(255, 193, 7, 0.3);
        border-radius: 20px;
        transition: all 0.3s;
        overflow: hidden;
        position: relative;
        margin-bottom: 1.5rem; /* Espaciado entre tarjetas */
    }

        .plan-upgrade-card:hover {
            border-color: #ffc107;
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(255, 193, 7, 0.4);
        }

        .plan-upgrade-card::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100px;
            height: 100px;
            background: radial-gradient(circle, rgba(255, 193, 7, 0.2) 0%, transparent 70%);
            border-radius: 50%;
            transform: translate(50%, -50%);
        }

    .badge-yellow {
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        color: #1a1a1a;
        font-weight: bold;
        padding: 0.6rem 1.2rem;
        border-radius: 20px;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
    }

    .text-yellow {
        color: #ffc107;
        text-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
    }

    .text-white-custom {
        color: #f8f9fa;
    }

    .btn-yellow {
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        color: #1a1a1a;
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 25px;
        font-weight: bold;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
    }

        .btn-yellow:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(255, 193, 7, 0.6);
            color: #000;
        }

    .btn-outline-yellow {
        background: transparent;
        color: #ffc107;
        border: 2px solid #ffc107;
        padding: 0.8rem 2rem;
        border-radius: 25px;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-outline-yellow:hover {
            background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
            color: #1a1a1a;
            border-color: #ffed4e;
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(255, 193, 7, 0.6);
        }

    .progress-bar-custom {
        background: linear-gradient(90deg, #ffc107 0%, #ffed4e 100%);
        box-shadow: 0 0 20px rgba(255, 193, 7, 0.6);
    }

    .icon-circle {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #1a1a1a;
        box-shadow: 0 0 30px rgba(255, 193, 7, 0.5);
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .divider-yellow {
        height: 3px;
        background: linear-gradient(90deg, transparent, #ffc107, transparent);
        border: none;
        margin: 2rem 0;
    }

    /* 👇 NUEVO: Estilos para evitar que la barra tape los botones */
    .content-wrapper {
        padding-bottom: 120px; /* Espaciado inferior extra */
    }

    .plans-section {
        margin-bottom: 3rem; /* Margen inferior para las tarjetas de planes */
    }
</style>

<div class="container mt-4 content-wrapper">
    <!-- Hero Section -->
    <div class="hero-section position-relative">
        <div class="text-center">
            <div class="icon-circle mb-4">
                <i class="fa fa-id-card"></i>
            </div>
            <h1 class="display-4 text-yellow mb-3">Mi Membresía</h1>
            <p class="lead text-white-custom">Gestiona tu plan y mantente al día con tus beneficios</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-dismissible fade show" style="background: linear-gradient(135deg, rgba(40, 167, 69, 0.2) 0%, rgba(34, 139, 61, 0.2) 100%); border: 2px solid #28a745; color: #fff; border-radius: 15px;">
            <i class="fa fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (membresiaActual != null)
    {
        var diasRestantes = (membresiaActual.FechaFin - DateTime.UtcNow).Days;
        var totalDias = (membresiaActual.FechaFin - membresiaActual.FechaInicio).Days;
        var progreso = totalDias > 0 ? (int)((totalDias - diasRestantes) * 100.0 / totalDias) : 0;

        <!-- Membresía Actual -->
        <div class="membresia-card mb-5">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h3 class="text-yellow mb-3">
                        <i class="fa fa-star me-2"></i>@membresiaActual.Plan?.Nombre
                    </h3>
                    <p class="text-white-custom mb-4">@membresiaActual.Plan?.Descripcion</p>

                    <div class="row mb-4">
                        <div class="col-md-4 mb-3">
                            <small class="text-muted">Precio Pagado</small>
                            <h4 class="text-yellow mb-0">S/ @membresiaActual.Precio.ToString("0.00")</h4>
                        </div>
                        <div class="col-md-4 mb-3">
                            <small class="text-muted">Fecha Inicio</small>
                            <h5 class="text-white-custom mb-0">@membresiaActual.FechaInicio.ToString("dd/MM/yyyy")</h5>
                        </div>
                        <div class="col-md-4 mb-3">
                            <small class="text-muted">Fecha Vencimiento</small>
                            <h5 class="text-white-custom mb-0">@membresiaActual.FechaFin.ToString("dd/MM/yyyy")</h5>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-white-custom">Días Restantes: <strong class="text-yellow">@diasRestantes días</strong></span>
                            <span class="text-muted">@progreso% usado</span>
                        </div>
                        <div class="progress" style="height: 12px; border-radius: 10px; background: rgba(255, 193, 7, 0.2);">
                            <div class="progress-bar progress-bar-custom" role="progressbar" style="width: @progreso%;" aria-valuenow="@progreso" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                    <div class="d-flex gap-3 flex-wrap">
                        @if (membresiaActual.Plan?.PermiteRutina == true)
                        {
                            <span class="badge-yellow">
                                <i class="fa fa-dumbbell me-1"></i>Rutinas Personalizadas
                            </span>
                        }
                        @if (membresiaActual.Plan?.PermiteAlimentacion == true)
                        {
                            <span class="badge-yellow">
                                <i class="fa fa-utensils me-1"></i>Plan Alimenticio
                            </span>
                        }
                    </div>
                </div>

                <div class="col-md-4 text-center">
                    <div style="width: 150px; height: 150px; margin: 0 auto; background: conic-gradient(#ffc107 0% @progreso%, rgba(255, 193, 7, 0.2) @progreso% 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <div style="width: 120px; height: 120px; background: #1a1a1a; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-direction: column;">
                            <h2 class="text-yellow mb-0">@diasRestantes</h2>
                            <small class="text-muted">días</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr class="divider-yellow" />

        @if (tienePlanMasCaro)
        {
            <!-- Ya tiene el plan más caro -->
            <div class="text-center py-5 mb-5">
                <div class="icon-circle mb-4" style="width: 100px; height: 100px; font-size: 2.5rem;">
                    <i class="fa fa-crown"></i>
                </div>
                <h2 class="text-yellow mb-3">¡Felicidades!</h2>
                <p class="lead text-white-custom mb-4">Ya cuentas con nuestro plan más completo</p>
                <div class="alert" style="background: linear-gradient(135deg, rgba(255, 193, 7, 0.2) 0%, rgba(255, 237, 74, 0.1) 100%); border: 2px solid #ffc107; border-radius: 20px;">
                    <p class="text-white-custom mb-0">
                        <i class="fa fa-info-circle me-2 text-yellow"></i>
                        Disfruta de todos los beneficios premium de nuestro gimnasio
                    </p>
                </div>
            </div>
        }
        else if (planesSuperiores.Any())
        {
            <!-- Mostrar planes para upgrade -->
            <div class="text-center mb-5">
                <h2 class="text-yellow mb-2">Mejora tu Experiencia</h2>
                <p class="text-white-custom">Descubre los beneficios de nuestros planes superiores</p>
            </div>

            <div class="row g-4 plans-section">
                @foreach (var plan in planesSuperiores)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="plan-upgrade-card h-100">
                            <div class="card-body p-4">
                                <div class="text-center mb-4">
                                    <h4 class="text-yellow mb-3">@plan.Nombre</h4>
                                    <h2 class="text-yellow mb-0">S/ @plan.Precio.ToString("0.00")</h2>
                                    <small class="text-muted">/@plan.DuracionDias días</small>
                                </div>

                                <p class="text-white-custom mb-4">@plan.Descripcion</p>

                                <h6 class="text-yellow mb-3">Beneficios:</h6>
                                <ul class="list-unstyled text-white-custom mb-4">
                                    @foreach (var beneficio in plan.Beneficios)
                                    {
                                        <li class="mb-2">
                                            <i class="fa fa-check-circle text-yellow me-2"></i>@beneficio
                                        </li>
                                    }
                                </ul>

                                <form asp-controller="Membresias" asp-action="IniciarPago" method="post" class="mb-3">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@plan.MembresiaPlanId" />
                                    <button type="submit" class="btn btn-yellow w-100">
                                        <i class="fa fa-arrow-up me-2"></i>Mejorar Ahora
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <!-- Sin membresía activa -->
        <div class="text-center py-5 mb-5">
            <div class="icon-circle mb-4" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                <i class="fa fa-exclamation-triangle"></i>
            </div>
            <h2 class="text-white-custom mb-3">No tienes una membresía activa</h2>
            <p class="lead text-muted mb-4">Adquiere un plan para disfrutar de todos nuestros beneficios</p>
            <a asp-controller="Membresias" asp-action="Store" class="btn btn-yellow btn-lg mb-4">
                <i class="fa fa-shopping-cart me-2"></i>Ver Planes Disponibles
            </a>
        </div>
    }
</div>

<!-- Espaciador aumentado para evitar que la barra de Somee tape contenido -->
<div style="height: 150px;"></div>