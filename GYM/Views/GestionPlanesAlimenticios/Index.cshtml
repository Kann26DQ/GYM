@model IEnumerable<GYM.Models.PlanAlimenticio>
@{
    ViewData["Title"] = "Gestión de Planes Alimenticios";
    var empleadoNombre = ViewData["EmpleadoNombre"] as string;
}

<style>
    body {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
        min-height: 100vh;
        padding-bottom: 120px;
    }

    .plan-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid #4cff4c; /* ✅ Verde brillante */
        border-radius: 20px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        transition: all 0.3s;
        position: relative;
    }

        .plan-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(76, 255, 76, 0.4);
        }

    .text-green {
        color: #4cff4c !important;
        font-weight: 600;
        text-shadow: 0 0 5px rgba(76, 255, 76, 0.3);
    }

    .text-white-custom {
        color: #ffffff !important;
        font-weight: 500;
    }

    /* ✅ BOTÓN VERDE - SIN TEXTO NEGRO */
    .btn-crear-plan {
        background: linear-gradient(135deg, #4cff4c 0%, #20c997 100%);
        color: #1a1a1a !important; /* Texto oscuro sobre fondo brillante */
        border: none;
        padding: 0.9rem 2.2rem;
        border-radius: 15px;
        font-weight: bold;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
        box-shadow: 0 4px 15px rgba(76, 255, 76, 0.4);
    }

        .btn-crear-plan:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 20px rgba(76, 255, 76, 0.6);
            color: #000000 !important;
        }

    .btn-eliminar-plan {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: #ffffff !important;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-eliminar-plan:hover {
            transform: scale(1.05);
            box-shadow: 0 3px 10px rgba(220, 53, 69, 0.5);
        }

    .stats-card {
        background: rgba(76, 255, 76, 0.15);
        border: 2px solid rgba(76, 255, 76, 0.4);
        border-radius: 15px;
        padding: 1.5rem;
        text-align: center;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: bold;
        color: #4cff4c;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    }

    h2, h3, h4 {
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    }

    strong {
        color: #4cff4c !important;
    }

    small, p {
        color: #ffffff !important;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-green mb-1">
                <i class="fa fa-utensils me-2"></i>Gestión de Planes Alimenticios
            </h2>
            <p class="text-white-custom mb-0">
                <i class="fa fa-user-tie me-1"></i>Nutricionista: <strong>@empleadoNombre</strong>
            </p>
        </div>
        @if (Model != null && Model.Any())
        {
            <a asp-action="SeleccionarCliente" class="btn-crear-plan">
                <i class="fa fa-plus-circle me-2"></i>Crear Plan
            </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" style="background: rgba(76, 255, 76, 0.15) !important; border: 2px solid #4cff4c !important;">
            <i class="fa fa-check-circle me-2"></i><span class="text-white-custom">@TempData["Success"]</span>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fa fa-exclamation-circle me-2"></i><span class="text-white-custom">@TempData["Error"]</span>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <i class="fa fa-exclamation-triangle me-2"></i><span class="text-white-custom">@TempData["Warning"]</span>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <!-- Estadísticas -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stats-card">
                    <div class="stat-number">@Model.Count()</div>
                    <p class="text-white-custom mb-0">Planes Creados</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card">
                    <div class="stat-number">@Model.Select(p => p.ClienteId).Distinct().Count()</div>
                    <p class="text-white-custom mb-0">Clientes Atendidos</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card">
                    <div class="stat-number">@Model.Sum(p => p.Comidas?.Count ?? 0)</div>
                    <p class="text-white-custom mb-0">Comidas Totales</p>
                </div>
            </div>
        </div>

        <!-- Lista de Planes -->
        <div class="row">
            @foreach (var plan in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="plan-card">
                        <h4 class="text-green mb-2">
                            <i class="fa fa-leaf me-2"></i>@plan.Nombre
                        </h4>
                        <p class="text-white-custom small mb-2">
                            <i class="fa fa-user me-1 text-green"></i>
                            <strong class="text-green">@plan.Cliente?.Nombre</strong>
                        </p>
                        <p class="text-white-custom small mb-3">
                            <i class="fa fa-apple-alt me-1 text-green"></i>
                            @(plan.Comidas?.Count ?? 0) comida(s)
                        </p>
                        <p class="text-white-custom small mb-3">
                            <i class="fa fa-calendar me-1 text-green"></i>
                            @plan.FechaCreacion.ToString("dd/MM/yyyy")
                        </p>

                        <div class="d-flex gap-2">
                            <a asp-action="Detalles" asp-route-id="@plan.PlanAlimenticioId"
                               class="btn btn-outline-success btn-sm flex-grow-1">
                                <i class="fa fa-eye me-1"></i>Ver Detalles
                            </a>
                            <form asp-action="Eliminar" method="post" class="d-inline"
                                  onsubmit="return confirm('¿Estás seguro de eliminar el plan \'@plan.Nombre\'? Esta acción no se puede deshacer.');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@plan.PlanAlimenticioId" />
                                <button type="submit" class="btn-eliminar-plan">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fa fa-utensils text-green mb-4" style="font-size: 6rem; opacity: 0.4;"></i>
            <h3 class="text-white-custom mb-3">No has creado planes alimenticios aún</h3>
            <p class="text-white-custom mb-4">
                Comienza creando planes alimenticios personalizados para tus clientes en base a sus evaluaciones de rendimiento.
            </p>
            <div class="alert alert-info d-inline-block" style="background: rgba(32, 201, 151, 0.15); border: 2px solid #20c997; max-width: 600px;">
                <i class="fa fa-info-circle me-2"></i>
                <strong class="text-white-custom">Como nutricionista, puedes crear planes para:</strong><br />
                <ul class="text-start text-white-custom mb-0 mt-2">
                    <li>Clientes de tu grupo (que hayas evaluado)</li>
                    <li>Que tengan membresía con plan alimenticio activo</li>
                </ul>
            </div>
            <div class="mt-4">
                <a asp-action="SeleccionarCliente" class="btn-crear-plan">
                    <i class="fa fa-plus-circle me-2"></i>Crear Primer Plan Alimenticio
                </a>
            </div>
        </div>
    }
</div>

<div style="height: 150px;"></div>