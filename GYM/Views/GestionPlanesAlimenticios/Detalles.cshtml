@model GYM.Models.PlanAlimenticio
@{
    ViewData["Title"] = "Detalle del Plan Alimenticio";
    var empleadoNombre = ViewData["EmpleadoNombre"] as string;
}

<style>
    body {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
        min-height: 100vh;
        padding-bottom: 200px;
    }

    .plan-container {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid #4cff4c;
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(76, 255, 76, 0.2);
    }

    .comida-item {
        background: rgba(45, 45, 45, 0.95);
        border: 2px solid rgba(76, 255, 76, 0.5);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        transition: all 0.3s;
        position: relative;
    }

        .comida-item:hover {
            border-color: #4cff4c;
            box-shadow: 0 4px 15px rgba(76, 255, 76, 0.4);
            transform: translateX(3px);
        }

    .text-green {
        color: #4cff4c !important;
        font-weight: 600;
        text-shadow: 0 0 5px rgba(76, 255, 76, 0.3);
    }

    .text-white-custom {
        color: #ffffff !important;
        font-weight: 500;
    }

    .badge-horario {
        background: linear-gradient(135deg, #20c997 0%, #17a2b8 100%);
        color: #ffffff !important;
        padding: 0.6rem 1.2rem;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: bold;
        box-shadow: 0 2px 8px rgba(32, 201, 151, 0.3);
    }

    .ingredientes-content {
        background: rgba(76, 255, 76, 0.1);
        border-left: 5px solid #4cff4c;
        padding: 1.2rem;
        border-radius: 8px;
        margin-top: 1rem;
    }

        .ingredientes-content p {
            color: #ffffff !important;
            font-size: 1rem;
            line-height: 1.6;
            white-space: pre-line;
            margin-bottom: 0;
        }

    /* ✅ BOTONES FLOTANTES FIJOS (evitan barra de Somee) */
    .btn-actions-fixed {
        position: fixed;
        bottom: 100px; /* Espacio suficiente sobre barra de Somee */
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        display: flex;
        gap: 1rem;
        background: rgba(26, 26, 26, 0.95);
        padding: 1.2rem 2rem;
        border-radius: 20px;
        box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.5);
        border: 2px solid rgba(76, 255, 76, 0.3);
    }

    .btn-action {
        padding: 1rem 2rem;
        border-radius: 15px;
        font-weight: bold;
        font-size: 1.1rem;
        border: 2px solid;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 150px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    .btn-volver {
        background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
        color: #ffffff !important;
        border-color: #6c757d;
    }

        .btn-volver:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(108, 117, 125, 0.5);
            color: #ffffff !important;
        }

    .btn-editar {
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        color: #1a1a1a !important;
        border-color: #ffc107;
    }

        .btn-editar:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(255, 193, 7, 0.5);
            color: #000000 !important;
        }

    .btn-eliminar {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: #ffffff !important;
        border-color: #dc3545;
    }

        .btn-eliminar:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(220, 53, 69, 0.5);
        }

    /* ✅ Badge numerador */
    .badge-numero {
        background: linear-gradient(135deg, #4cff4c 0%, #20c997 100%) !important;
        color: #1a1a1a !important;
        font-weight: bold;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        border-radius: 10px;
    }

    /* ✅ Alertas con mejor contraste */
    .alert-success {
        background: rgba(76, 255, 76, 0.15) !important;
        border: 2px solid #4cff4c !important;
        color: #ffffff !important;
    }

    .alert-danger {
        background: rgba(220, 53, 69, 0.15) !important;
        border: 2px solid #dc3545 !important;
        color: #ffffff !important;
    }

    /* ✅ Sombras para mejor legibilidad */
    h2, h4, h5, h6 {
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    }

    /* ✅ Espaciador inferior */
    .content-spacer {
        height: 180px;
    }

    /* ✅ Responsive */
    @@media (max-width: 992px) {
        .btn-actions-fixed

    {
        bottom: 80px;
        flex-wrap: wrap;
        padding: 1rem;
    }

    .btn-action {
        flex: 1 1 calc(33% - 0.5rem);
        min-width: auto;
        padding: 0.8rem 1rem;
        font-size: 0.95rem;
    }

    }

    @@media (max-width: 768px) {
        .btn-actions-fixed

    {
        left: 1rem;
        right: 1rem;
        transform: none;
    }

    .btn-action {
        flex: 1 1 100%;
    }

    }

    /* ✅ Animación de entrada */
    .comida-item {
        animation: fadeInUp 0.5s ease-out;
    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* ✅ Estado vacío mejorado */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: rgba(76, 255, 76, 0.05);
        border: 2px dashed rgba(76, 255, 76, 0.3);
        border-radius: 15px;
    }
</style>

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-green">
            <i class="fa fa-utensils me-2"></i>@Model.Nombre
        </h2>
    </div>

    <!-- Mensajes de feedback -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fa fa-check-circle me-2"></i>
            <span class="text-white-custom">@TempData["Success"]</span>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fa fa-exclamation-circle me-2"></i>
            <span class="text-white-custom">@TempData["Error"]</span>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Información del Cliente y Plan -->
    <div class="plan-container">
        <h4 class="text-green mb-3">
            <i class="fa fa-info-circle me-2"></i>Información General
        </h4>
        <div class="row">
            <div class="col-md-6">
                <p class="text-white-custom mb-2">
                    <strong class="text-green">
                        <i class="fa fa-user me-2"></i>Cliente:
                    </strong>
                    @Model.Cliente?.Nombre
                </p>
                <p class="text-white-custom mb-2">
                    <strong class="text-green">
                        <i class="fa fa-envelope me-2"></i>Email:
                    </strong>
                    @Model.Cliente?.Email
                </p>
            </div>
            <div class="col-md-6">
                <p class="text-white-custom mb-2">
                    <strong class="text-green">
                        <i class="fa fa-bullseye me-2"></i>Objetivo:
                    </strong>
                    @Model.Objetivo
                </p>
                <p class="text-white-custom mb-2">
                    <strong class="text-green">
                        <i class="fa fa-calendar me-2"></i>Fecha de creación:
                    </strong>
                    @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                </p>
                <p class="text-white-custom mb-0">
                    <strong class="text-green">
                        <i class="fa fa-user-tie me-2"></i>Creado por:
                    </strong>
                    @empleadoNombre
                </p>
            </div>
        </div>
    </div>

    <!-- Plan de Comidas -->
    <div class="plan-container">
        <h4 class="text-green mb-4">
            <i class="fa fa-apple-alt me-2"></i>Plan de Comidas
            <span class="badge-numero ms-2">@(Model.Comidas?.Count ?? 0) comidas</span>
        </h4>

        @if (Model.Comidas != null && Model.Comidas.Any())
        {
            int index = 1;
            foreach (var comida in Model.Comidas)
            {
                <div class="comida-item" style="animation-delay: @((index - 1) * 0.1)s;">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="text-green mb-0">
                            <span class="badge-numero me-2">@index</span>
                            @comida.Nombre
                        </h5>
                        <span class="badge-horario">
                            <i class="fa fa-clock me-1"></i>@comida.Horarios
                        </span>
                    </div>

                    <div class="ingredientes-content">
                        <p class="text-white-custom mb-1">
                            <strong class="text-green">
                                <i class="fa fa-shopping-basket me-1"></i>Ingredientes y Preparación:
                            </strong>
                        </p>
                        <p class="text-white-custom">@comida.Ingredientes</p>
                    </div>
                </div>
                index++;
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fa fa-utensils text-green mb-4" style="font-size: 5rem; opacity: 0.3;"></i>
                <h5 class="text-white-custom mb-3">No hay comidas registradas</h5>
                <p class="text-white-custom small mb-0">
                    Este plan aún no tiene comidas asignadas. Edita el plan para agregar comidas.
                </p>
            </div>
        }
    </div>

    <!-- Información Adicional -->
    <div class="plan-container">
        <div class="alert alert-info mb-0" style="background: rgba(32, 201, 151, 0.15); border: 2px solid #20c997;">
            <h6 class="text-green mb-2">
                <i class="fa fa-lightbulb me-2"></i>Nota Importante
            </h6>
            <p class="text-white-custom small mb-0">
                Este plan alimenticio ha sido diseñado específicamente para <strong class="text-green">@Model.Cliente?.Nombre</strong>
                según sus objetivos y evaluación de rendimiento. Para mejores resultados, sigue las indicaciones de tu nutricionista
                <strong class="text-green">@empleadoNombre</strong>.
            </p>
        </div>
    </div>

    <!-- Espaciador -->
    <div class="content-spacer"></div>
</div>

<!-- ✅ BOTONES FLOTANTES FIJOS -->
<div class="btn-actions-fixed">
    <a asp-action="Index" class="btn-action btn-volver">
        <i class="fa fa-arrow-left me-2"></i>Volver
    </a>
    <a asp-action="Editar" asp-route-id="@Model.PlanAlimenticioId" class="btn-action btn-editar">
        <i class="fa fa-edit me-2"></i>Editar
    </a>
    <form asp-action="Eliminar" method="post" class="m-0"
          onsubmit="return confirm('¿Estás seguro de eliminar el plan \'@Model.Nombre\' para @Model.Cliente?.Nombre?\n\nEsta acción no se puede deshacer y se eliminarán todas las comidas asociadas.');">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.PlanAlimenticioId" />
        <button type="submit" class="btn-action btn-eliminar">
            <i class="fa fa-trash me-2"></i>Eliminar
        </button>
    </form>
</div>