@{
    ViewData["Title"] = "Calendario de Reservas";
    var userId = ViewData["UserId"];
}

<style>
    body {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
        min-height: 100vh;
    }

    .hero-section {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 237, 74, 0.05) 100%);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 1.5rem;
        position: relative;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 193, 7, 0.1) 0%, transparent 70%);
            animation: pulse 4s ease-in-out infinite;
        }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            opacity: 0.5;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }
    }

    .text-yellow {
        color: #ffc107;
        text-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
    }

    .text-white-custom {
        color: #f8f9fa;
    }

    .icon-circle {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #1a1a1a;
        box-shadow: 0 0 20px rgba(255, 193, 7, 0.5);
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-8px);
        }
    }

    .btn-yellow {
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        color: #1a1a1a;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 20px;
        font-weight: bold;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
        font-size: 0.9rem;
    }

        .btn-yellow:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 193, 7, 0.6);
            color: #000;
        }

    .btn-outline-yellow {
        background: transparent;
        color: #ffc107;
        border: 2px solid #ffc107;
        padding: 0.5rem 1rem;
        border-radius: 15px;
        font-weight: bold;
        transition: all 0.3s;
        font-size: 0.85rem;
    }

        .btn-outline-yellow:hover {
            background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
            color: #1a1a1a;
            border-color: #ffed4e;
        }

    .calendar-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid #ffc107;
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: 0 8px 30px rgba(255, 193, 7, 0.3);
        transition: all 0.3s;
    }

    .horarios-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid rgba(255, 193, 7, 0.5);
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: 0 8px 30px rgba(255, 193, 7, 0.2);
    }

    .info-banner {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.2) 0%, rgba(255, 237, 74, 0.1) 100%);
        border: 2px solid #ffc107;
        border-radius: 15px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

    .calendario-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 6px;
        margin-top: 1rem;
    }

    .calendario-dia-nombre {
        text-align: center;
        font-weight: bold;
        padding: 6px;
        background: rgba(255, 193, 7, 0.1);
        border-radius: 8px;
        color: #ffc107;
        font-size: 0.75rem;
    }

    .calendario-dia {
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid rgba(255, 193, 7, 0.2);
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s;
        font-weight: 600;
        color: #f8f9fa;
        background: rgba(45, 45, 45, 0.5);
        font-size: 0.9rem;
    }

        .calendario-dia:hover:not(.disabled):not(.otro-mes) {
            background: linear-gradient(135deg, rgba(255, 193, 7, 0.3) 0%, rgba(255, 237, 74, 0.2) 100%);
            border-color: #ffc107;
            transform: scale(1.08);
            color: #ffc107;
        }

        .calendario-dia.seleccionado {
            background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
            color: #1a1a1a;
            border-color: #ffed4e;
            font-weight: bold;
            transform: scale(1.1);
            box-shadow: 0 0 15px rgba(255, 193, 7, 0.6);
        }

        .calendario-dia.hoy {
            border: 2px solid #ffc107;
            box-shadow: 0 0 10px rgba(255, 193, 7, 0.4);
        }

        .calendario-dia.disabled {
            background: rgba(26, 26, 26, 0.5);
            color: #6c757d;
            cursor: not-allowed;
            border-color: rgba(108, 117, 125, 0.2);
        }

        .calendario-dia.otro-mes {
            color: #495057;
            border-color: rgba(73, 80, 87, 0.1);
        }

    .horarios-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 10px;
        max-height: 450px;
        overflow-y: auto;
        padding-right: 8px;
    }

        .horarios-grid::-webkit-scrollbar {
            width: 6px;
        }

        .horarios-grid::-webkit-scrollbar-track {
            background: rgba(255, 193, 7, 0.1);
            border-radius: 10px;
        }

        .horarios-grid::-webkit-scrollbar-thumb {
            background: #ffc107;
            border-radius: 10px;
        }

    .horario-btn {
        padding: 0.9rem;
        border: 2px solid rgba(255, 193, 7, 0.3);
        border-radius: 12px;
        background: linear-gradient(135deg, rgba(45, 45, 45, 0.8) 0%, rgba(26, 26, 26, 0.8) 100%);
        cursor: pointer;
        transition: all 0.3s;
        text-align: left;
    }

        .horario-btn:hover:not(:disabled) {
            border-color: #ffc107;
            transform: translateX(6px);
            box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
            background: linear-gradient(135deg, rgba(255, 193, 7, 0.2) 0%, rgba(255, 237, 74, 0.1) 100%);
        }

        .horario-btn.disponible {
            border-color: #28a745;
        }

        .horario-btn.casi-lleno {
            border-color: #ffc107;
        }

        .horario-btn:disabled {
            background: rgba(26, 26, 26, 0.5);
            cursor: not-allowed;
            opacity: 0.4;
            border-color: rgba(108, 117, 125, 0.2);
        }

    .horario-btn.conflicto-horario-fijo {
        border-color: rgba(255, 193, 7, 0.6);
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.15) 0%, rgba(255, 237, 74, 0.1) 100%);
    }

        .horario-btn.conflicto-horario-fijo:hover:not(:disabled) {
            border-color: #ffc107;
            background: linear-gradient(135deg, rgba(255, 193, 7, 0.25) 0%, rgba(255, 237, 74, 0.15) 100%);
        }

    .horario-tiempo {
        font-size: 0.95rem;
        font-weight: bold;
        color: #ffc107;
    }

    .horario-capacidad {
        font-size: 0.75rem;
        color: #adb5bd;
    }

    .badge-yellow-custom {
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        color: #1a1a1a;
        padding: 0.3rem 0.6rem;
        border-radius: 10px;
        font-size: 0.75rem;
    }

    .badge-success-custom {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        padding: 0.3rem 0.6rem;
        border-radius: 10px;
        font-size: 0.75rem;
    }

    .badge-danger-custom {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        padding: 0.3rem 0.6rem;
        border-radius: 10px;
        font-size: 0.75rem;
    }

    .content-wrapper {
        padding-bottom: 120px;
    }

    .calendar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding: 0.8rem;
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 237, 74, 0.05) 100%);
        border-radius: 12px;
    }

        .calendar-header h4 {
            color: #ffc107;
            margin: 0;
            font-weight: bold;
            font-size: 1.1rem;
        }

    .fecha-selected-banner {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.2) 0%, rgba(255, 237, 74, 0.1) 100%);
        border: 2px solid #ffc107;
        border-radius: 12px;
        padding: 0.8rem;
        text-align: center;
        margin-bottom: 1rem;
        color: #ffc107;
        font-weight: bold;
        font-size: 0.9rem;
    }

    /* Reducir tamaño de iconos */
    .badge-yellow-custom i,
    .badge-success-custom i,
    .badge-danger-custom i {
        font-size: 0.7rem;
    }

    .horario-tiempo i {
        font-size: 0.9rem;
    }

    .horario-capacidad i {
        font-size: 0.7rem;
    }

    h4.text-yellow {
        font-size: 1.2rem;
    }

    h5.text-yellow {
        font-size: 1rem;
    }
</style>

