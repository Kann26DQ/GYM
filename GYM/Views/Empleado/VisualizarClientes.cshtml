@model List<GYM.Models.Usuario>
@{
    ViewData["Title"] = "Clientes Activos";
    var empleadoNombre = (string?)ViewData["EmpleadoNombre"];
}

<style>
    body {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
        min-height: 100vh;
    }

    .cliente-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid rgba(255, 193, 7, 0.3);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        transition: all 0.3s;
    }

        .cliente-card:hover {
            border-color: #ffc107;
            transform: translateX(5px);
        }

    .text-yellow {
        color: #ffc107;
    }

    .text-white-custom {
        color: #f8f9fa;
    }

    .info-box {
        background: rgba(23, 162, 184, 0.1);
        border: 2px solid rgba(23, 162, 184, 0.3);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-yellow mb-0">
            <i class="fa fa-users me-2"></i>Clientes Activos del Gimnasio
        </h2>
        <a asp-action="Index" class="btn btn-outline-warning">
            <i class="fa fa-arrow-left me-2"></i>Volver al Panel
        </a>
    </div>

    <div class="info-box">
        <h5 class="text-info mb-2">
            <i class="fa fa-info-circle me-2"></i>Vista de Solo Lectura
        </h5>
        <p class="text-white-custom mb-0">
            Esta es una vista informativa de todos los clientes activos. Para crear grupos y evaluaciones, ve a <strong>"Mis Grupos" → "Nuevo Grupo"</strong>.
        </p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="alert alert-success mb-4">
            <i class="fa fa-check-circle me-2"></i>
            <strong>@Model.Count cliente(s) activo(s)</strong> en el gimnasio
        </div>

        <div class="row">
            @foreach (var cliente in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="cliente-card">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fa fa-user-circle fa-3x text-yellow"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="text-yellow mb-1">@cliente.Nombre</h5>
                                <p class="text-white-custom small mb-1">
                                    <i class="fa fa-envelope me-1"></i>@cliente.Email
                                </p>
                                @if (!string.IsNullOrEmpty(cliente.Telefono))
                                {
                                    <p class="text-white-custom small mb-0">
                                        <i class="fa fa-phone me-1"></i>@cliente.Telefono
                                    </p>
                                }
                                <p class="text-success small mb-0 mt-1">
                                    <i class="fa fa-check-circle me-1"></i>Activo
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fa fa-info-circle me-2"></i>
            No hay clientes registrados en el gimnasio.
        </div>
    }
</div>

<div style="height: 150px;"></div>