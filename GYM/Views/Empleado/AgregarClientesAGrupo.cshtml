@model List<GYM.Models.Usuario>
@{
    ViewData["Title"] = "Agregar Clientes al Grupo";
    var empleadoNombre = (string?)ViewData["EmpleadoNombre"];
    var grupo = (GYM.Models.GrupoClientes)ViewData["Grupo"];
    var clientesActuales = (List<string>?)ViewData["ClientesActualesGrupo"] ?? new List<string>();
}

<style>
    body {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
        min-height: 100vh;
        padding-bottom: 120px;
    }

    .cliente-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid rgba(255, 193, 7, 0.3);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        transition: all 0.3s;
        cursor: pointer;
    }

        .cliente-card:hover {
            border-color: #ffc107;
            transform: translateX(5px);
            box-shadow: 0 5px 20px rgba(255, 193, 7, 0.4);
        }

        .cliente-card.selected {
            border-color: #28a745;
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.2) 0%, rgba(32, 201, 151, 0.1) 100%);
        }

    .text-yellow {
        color: #ffc107;
    }

    .text-white-custom {
        color: #f8f9fa;
    }

    .info-grupo {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid @grupo.Color;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    /* ✅ BOTÓN FIJO EN LA PARTE SUPERIOR - NO EN EL BOTTOM */
    .contador-seleccion {
        position: sticky;
        top: 20px;
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(40, 167, 69, 0.5);
        z-index: 1000;
        display: none;
        margin-bottom: 2rem;
        animation: slideDown 0.3s ease-out;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-yellow mb-0">
            <i class="fa fa-user-plus me-2"></i>Agregar Clientes al Grupo
        </h2>
        <a asp-action="MisGrupos" class="btn btn-outline-warning">
            <i class="fa fa-arrow-left me-2"></i>Volver a Mis Grupos
        </a>
    </div>

    <!-- INFO DEL GRUPO -->
    <div class="info-grupo">
        <div class="d-flex align-items-center mb-3">
            <div class="me-3" style="width: 40px; height: 40px; background: @grupo.Color; border-radius: 10px; border: 2px solid rgba(255,255,255,0.3);"></div>
            <div>
                <h4 class="text-yellow mb-1">@grupo.Titulo</h4>
                <p class="text-white-custom small mb-0">
                    <i class="fa fa-users me-1"></i>
                    <strong>Clientes actuales:</strong> @(clientesActuales.Any() ? string.Join(", ", clientesActuales) : "Ninguno")
                </p>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fa fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fa fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <form asp-action="AgregarClientesAGrupo" method="post" id="formAgregar">
            @Html.AntiForgeryToken()
            <input type="hidden" name="grupoId" value="@grupo.GrupoClientesId" />

            @* ✅ BOTÓN MOVIDO ARRIBA - STICKY EN LA PARTE SUPERIOR *@
            <div class="contador-seleccion" id="contadorSeleccion">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fa fa-users me-2"></i>
                        <span id="cantidadSeleccionados">0</span> cliente(s) seleccionado(s)
                    </h5>
                    <button type="submit" class="btn btn-light btn-lg ms-3">
                        <i class="fa fa-user-plus me-2"></i>Agregar al Grupo y Evaluar
                    </button>
                </div>
            </div>

            <div class="alert alert-info mb-4">
                <i class="fa fa-info-circle me-2"></i>
                <strong>@Model.Count cliente(s)</strong> disponible(s) para agregar al grupo. Haz clic en las tarjetas para seleccionar.
            </div>

            <div class="row">
                @foreach (var cliente in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="cliente-card" onclick="toggleCliente(@cliente.UsuarioId)">
                            <input type="checkbox"
                                   name="clientesSeleccionados"
                                   value="@cliente.UsuarioId"
                                   id="cliente_@cliente.UsuarioId"
                                   style="display: none;" />
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fa fa-user-circle fa-3x text-yellow"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="text-yellow mb-1">@cliente.Nombre</h5>
                                    <p class="text-white-custom small mb-1">
                                        <i class="fa fa-envelope me-1"></i>@cliente.Email
                                    </p>
                                    <span class="badge bg-success small">
                                        <i class="fa fa-check-circle me-1"></i>Disponible
                                    </span>
                                </div>
                                <div class="check-icon" id="check_@cliente.UsuarioId" style="display: none;">
                                    <i class="fa fa-check-circle fa-2x text-success"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </form>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fa fa-users text-yellow mb-4" style="font-size: 5rem; opacity: 0.3;"></i>
            <h3 class="text-white-custom mb-3">No hay clientes disponibles</h3>
            <p class="text-white-custom mb-4">
                Todos los clientes activos ya están en grupos.
            </p>
            <a asp-action="MisGrupos" class="btn btn-yellow">
                <i class="fa fa-arrow-left me-2"></i>Volver a Mis Grupos
            </a>
        </div>
    }
</div>

<div style="height: 150px;"></div>

<script>
    let seleccionados = [];

    function toggleCliente(clienteId) {
        const checkbox = document.getElementById(`cliente_${clienteId}`);
        const card = checkbox.closest('.cliente-card');
        const checkIcon = document.getElementById(`check_${clienteId}`);

        checkbox.checked = !checkbox.checked;

        if (checkbox.checked) {
            card.classList.add('selected');
            checkIcon.style.display = 'block';
            seleccionados.push(clienteId);
        } else {
            card.classList.remove('selected');
            checkIcon.style.display = 'none';
            seleccionados = seleccionados.filter(id => id !== clienteId);
        }

        actualizarContador();
    }

    function actualizarContador() {
        const contador = document.getElementById('contadorSeleccion');
        const cantidad = document.getElementById('cantidadSeleccionados');

        cantidad.textContent = seleccionados.length;

        if (seleccionados.length > 0) {
            contador.style.display = 'block';
        } else {
            contador.style.display = 'none';
        }
    }

    document.getElementById('formAgregar')?.addEventListener('submit', function (e) {
        if (seleccionados.length === 0) {
            e.preventDefault();
            alert('⚠️ Debes seleccionar al menos un cliente.');
        }
    });
</script>