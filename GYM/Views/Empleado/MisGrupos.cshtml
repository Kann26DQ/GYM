@model List<GYM.Models.EvaluacionRendimiento>
@{
    ViewData["Title"] = "Mis Grupos de Clientes";
    var empleadoNombre = (string?)ViewData["EmpleadoNombre"];
    var gruposEvaluaciones = ViewData["GruposEvaluaciones"] as IEnumerable<dynamic>;

    var evaluacionIdPendiente = TempData.Peek("EvaluacionIdPendiente") as int?;
    var clienteNombrePendiente = TempData.Peek("ClienteNombrePendiente") as string;
}

<style>
    body {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
        min-height: 100vh;
    }

    .grupo-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid rgba(255, 193, 7, 0.3);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        transition: all 0.3s;
    }

        .grupo-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(255, 193, 7, 0.3);
        }

    .evaluacion-mini {
        background: rgba(45, 45, 45, 0.6);
        border: 1px solid rgba(255, 193, 7, 0.2);
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 0.8rem;
        transition: all 0.3s;
    }

        .evaluacion-mini:hover {
            border-color: #ffc107;
            transform: translateX(5px);
        }

    .text-yellow {
        color: #ffc107;
    }

    .text-white-custom {
        color: #f8f9fa;
    }

    .btn-yellow {
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        color: #1a1a1a;
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 25px;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-yellow:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 20px rgba(255, 193, 7, 0.5);
        }

    .modal-backdrop-custom {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        z-index: 1040;
        backdrop-filter: blur(5px);
    }

    .modal-custom {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1050;
    }

    .modal-dialog-custom {
        max-width: 500px;
        width: 90%;
    }

    .modal-content-custom {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid #ffc107;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 10px 40px rgba(255, 193, 7, 0.4);
    }
</style>

<!-- ✅ MODAL PARA CONFIRMAR ELIMINACIÓN CON RUTINAS -->
@if (evaluacionIdPendiente.HasValue)
{
    <div class="modal-backdrop-custom" onclick="cerrarModal()"></div>
    <div class="modal-custom" id="modalConfirmarEliminacion">
        <div class="modal-dialog-custom">
            <div class="modal-content-custom">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="text-yellow mb-0">
                        <i class="fa fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close btn-close-white" onclick="cerrarModal()"></button>
                </div>

                <hr style="border-color: rgba(255, 193, 7, 0.3);">

                <div class="mb-3">
                    <p class="text-white-custom">
                        <strong>@clienteNombrePendiente</strong> tiene rutinas asociadas a esta evaluación.
                    </p>
                    <p class="text-white-custom">
                        ¿Deseas eliminar la evaluación <strong>Y TODAS SUS RUTINAS</strong>?
                    </p>
                </div>

                <div class="alert alert-warning mb-3" style="background: rgba(255, 193, 7, 0.1); border: 1px solid rgba(255, 193, 7, 0.3);">
                    <i class="fa fa-info-circle me-2 text-yellow"></i>
                    <span class="text-white-custom">
                        <strong>Nota:</strong> Al eliminar, <strong>@clienteNombrePendiente</strong> volverá a estar disponible en "Clientes Activos".
                    </span>
                </div>

                <div class="d-flex gap-2 justify-content-end">
                    <button type="button" class="btn btn-outline-secondary" onclick="cerrarModal()">
                        <i class="fa fa-times me-2"></i>Cancelar
                    </button>
                    <form asp-action="EliminarEvaluacion" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="evaluacionId" value="@evaluacionIdPendiente" />
                        <input type="hidden" name="eliminarRutinas" value="true" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash me-2"></i>Sí, Eliminar Todo
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-yellow mb-0">
            <i class="fa fa-users me-2"></i>Mis Grupos de Clientes
        </h2>
        <div>
            <a asp-controller="GestionRutinas" asp-action="Index" class="btn btn-outline-warning">
                <i class="fa fa-arrow-left me-2"></i>Volver al Panel
            </a>
            <a asp-controller="GestionRutinas" asp-action="SeleccionarClientes" class="btn btn-yellow ms-2">
                <i class="fa fa-plus-circle me-2"></i>Nuevo Grupo
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fa fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <i class="fa fa-exclamation-triangle me-2"></i>@TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fa fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (gruposEvaluaciones != null && gruposEvaluaciones.Any())
    {
        @foreach (var grupo in gruposEvaluaciones)
        {
            var evaluacionesGrupo = (List<GYM.Models.EvaluacionRendimiento>)grupo.Evaluaciones;
            var primerEval = evaluacionesGrupo.FirstOrDefault();
            var grupoClientes = primerEval?.Grupo;

            <div class="grupo-card" style="border-color: @(grupoClientes?.Color ?? "#ffc107");">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="flex-grow-1">
                        <!-- ✅ MOSTRAR TÍTULO DEL GRUPO -->
                        <h4 class="text-yellow mb-2">
                            <i class="fa fa-users me-2" style="color: @(grupoClientes?.Color ?? "#ffc107");"></i>
                            @if (grupoClientes != null)
                            {
                                @grupoClientes.Titulo
                            }
                            else
                            {
                                <span>Grupo sin título - @grupo.Fecha.ToString("dd/MM/yyyy")</span>
                            }
                        </h4>
                        <p class="text-white-custom mb-0">
                            <i class="fa fa-calendar me-1"></i>
                            <strong>Creado:</strong> @grupo.Fecha.ToString("dddd, dd MMMM yyyy") |
                            <strong>Clientes:</strong> @grupo.TotalClientes |
                            <strong>Promedio:</strong>
                            <span class="badge bg-info">@grupo.PromedioGrupo.ToString("F1")/10</span>
                        </p>
                    </div>
                    <!-- ✅ BOTÓN PARA EDITAR TÍTULO Y COLOR -->
                    @if (grupoClientes != null)
                    {
                        <div class="d-flex gap-2">
                            <!-- ✅ NUEVO: Botón para agregar clientes -->
                            <a asp-action="AgregarClientesAGrupo"
                               asp-route-grupoId="@grupoClientes.GrupoClientesId"
                               class="btn btn-sm btn-outline-success"
                               title="Agregar clientes al grupo">
                                <i class="fa fa-user-plus"></i> Agregar Cliente
                            </a>

                            <!-- Botón para editar título y color -->
                            <button type="button"
                                    class="btn btn-sm btn-outline-warning"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalEditarGrupo_@grupoClientes.GrupoClientesId"
                                    title="Editar grupo">
                                <i class="fa fa-edit"></i> Editar
                            </button>
                        </div>
                    }
                </div>

                <hr style="border-color: @(grupoClientes?.Color ?? "rgba(255, 193, 7, 0.3)");">

                <div class="row">
                    @foreach (var evaluacion in evaluacionesGrupo)
                    {
                        <div class="col-md-6">
                            <div class="evaluacion-mini">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="text-yellow mb-1">
                                            <i class="fa fa-user me-2"></i>@evaluacion.Cliente?.Nombre
                                        </h6>
                                        <p class="text-white-custom small mb-1">
                                            <strong>Promedio:</strong> @evaluacion.PromedioRendimiento.ToString("F1")/10
                                        </p>
                                        <p class="text-white-custom small mb-0">
                                            <i class="fa fa-clock me-1"></i>@evaluacion.FechaEvaluacion.ToString("HH:mm")
                                        </p>
                                    </div>
                                    <div class="text-end">
                                        <a asp-controller="GestionRutinas"
                                           asp-action="EditarEvaluacion"
                                           asp-route-evaluacionId="@evaluacion.EvaluacionRendimientoId"
                                           class="btn btn-sm btn-outline-warning mb-1"
                                           title="Editar evaluación">
                                            <i class="fa fa-edit me-1"></i>Editar
                                        </a>

                                        <form asp-controller="GestionRutinas"
                                              asp-action="EliminarEvaluacion"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('¿Estás seguro de eliminar esta evaluación de @evaluacion.Cliente?.Nombre? Esto liberará al cliente.');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="evaluacionId" value="@evaluacion.EvaluacionRendimientoId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger mb-1" title="Eliminar evaluación">
                                                <i class="fa fa-trash me-1"></i>Eliminar
                                            </button>
                                        </form>

                                        @if (evaluacion.Rutinas != null && evaluacion.Rutinas.Count > 0)
                                        {
                                            <div class="mt-2">
                                                <span class="badge bg-success d-block mb-2">
                                                    <i class="fa fa-check-circle me-1"></i>@evaluacion.Rutinas.Count Rutina(s)
                                                </span>
                                                @foreach (var rutina in evaluacion.Rutinas)
                                                {
                                                    <div class="d-flex align-items-center justify-content-between gap-2 mb-1 p-2" style="background: rgba(255, 193, 7, 0.1); border-radius: 5px;">
                                                        <div class="flex-grow-1">
                                                            <small class="text-white-custom">
                                                                <i class="fa fa-dumbbell me-1 text-yellow"></i>
                                                                <strong>@rutina.Nombre</strong>
                                                            </small>
                                                            <br />
                                                            <small class="text-yellow">
                                                                @(rutina.Ejercicios?.Count ?? 0) ejercicio(s)
                                                            </small>
                                                        </div>
                                                        <div class="d-flex gap-1">
                                                            <a asp-controller="GestionRutinas"
                                                               asp-action="VerRutinaDetalle"
                                                               asp-route-rutinaId="@rutina.RutinaId"
                                                               class="btn btn-sm btn-outline-info"
                                                               title="Ver detalle">
                                                                <i class="fa fa-eye"></i>
                                                            </a>
                                                            <form asp-controller="GestionRutinas"
                                                                  asp-action="EliminarRutina"
                                                                  method="post"
                                                                  class="d-inline"
                                                                  onsubmit="return confirm('¿Eliminar la rutina \'@rutina.Nombre\' y todos sus ejercicios?');">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="rutinaId" value="@rutina.RutinaId" />
                                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar rutina">
                                                                    <i class="fa fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="mt-2">
                                                <small class="text-white-custom">
                                                    <i class="fa fa-info-circle me-1"></i>Sin rutinas asignadas
                                                </small>
                                                <br />
                                                <a asp-controller="GestionRutinas"
                                                   asp-action="CalendarioSemanal"
                                                   class="btn btn-sm btn-outline-success mt-1"
                                                   title="Ir al calendario para crear rutina">
                                                    <i class="fa fa-plus me-1"></i>Crear en Calendario
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- ✅ MODAL PARA EDITAR GRUPO -->
            @if (grupoClientes != null)
            {
                <div class="modal fade" id="modalEditarGrupo_@grupoClientes.GrupoClientesId" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content" style="background: #2d2d2d; border: 2px solid #ffc107;">
                            <div class="modal-header">
                                <h5 class="modal-title text-yellow">
                                    <i class="fa fa-edit me-2"></i>Editar Grupo
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form asp-controller="GestionRutinas" asp-action="EditarGrupo" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="grupoId" value="@grupoClientes.GrupoClientesId" />
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label for="titulo_@grupoClientes.GrupoClientesId" class="form-label text-white-custom">
                                            <i class="fa fa-tag me-2"></i>Título del Grupo
                                        </label>
                                        <input type="text"
                                               class="form-control"
                                               id="titulo_@grupoClientes.GrupoClientesId"
                                               name="titulo"
                                               value="@grupoClientes.Titulo"
                                               required
                                               maxlength="100"
                                               style="background: #1a1a1a; color: #f8f9fa; border: 1px solid #ffc107;">
                                    </div>
                                    <div class="mb-3">
                                        <label for="color_@grupoClientes.GrupoClientesId" class="form-label text-white-custom">
                                            <i class="fa fa-palette me-2"></i>Color del Grupo
                                        </label>
                                        <input type="color"
                                               class="form-control form-control-color"
                                               id="color_@grupoClientes.GrupoClientesId"
                                               name="color"
                                               value="@grupoClientes.Color"
                                               style="height: 50px; width: 100%;">
                                        <small class="text-white-custom">Este color se verá en el calendario semanal</small>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fa fa-save me-2"></i>Guardar Cambios
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fa fa-users text-yellow mb-4" style="font-size: 5rem; opacity: 0.3;"></i>
            <h3 class="text-white-custom mb-3">No has creado ningún grupo aún</h3>
            <p class="text-white-custom mb-4">
                Comienza evaluando clientes para crear tu primer grupo.
            </p>
            <a asp-controller="GestionRutinas" asp-action="SeleccionarClientes" class="btn btn-yellow btn-lg">
                <i class="fa fa-plus-circle me-2"></i>Crear Primer Grupo
            </a>
        </div>
    }
</div>

<div style="height: 150px;"></div>

<script>
    function cerrarModal() {
        const modal = document.getElementById('modalConfirmarEliminacion');
        if (modal) {
            modal.style.display = 'none';
        }
        const backdrop = document.querySelector('.modal-backdrop-custom');
        if (backdrop) {
            backdrop.style.display = 'none';
        }
    }

    document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape') {
            cerrarModal();
        }
    });
</script>