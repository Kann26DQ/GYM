@{
    ViewData["Title"] = "Gestión de Rutinas - Empleado";
    var clientesActivos = (List<GYM.Models.Usuario>)ViewData["ClientesActivos"];
    var rutinasRecientes = (List<GYM.Models.Rutina>)ViewData["RutinasRecientes"];
    var totalClientesActivos = (int)ViewData["TotalClientesActivos"];
    var empleadoNombre = (string)ViewData["EmpleadoNombre"];
}

<style>
    body {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
        min-height: 100vh;
    }

    .hero-section {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 237, 74, 0.05) 100%);
        border-radius: 30px;
        padding: 3rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

    .stats-card {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        border: 2px solid #ffc107;
        border-radius: 15px;
        padding: 1.5rem;
        text-align: center;
        transition: all 0.3s;
    }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(255, 193, 7, 0.4);
        }

    .text-yellow {
        color: #ffc107;
        text-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
    }

    .text-white-custom {
        color: #f8f9fa;
    }

    .btn-calendario {
        background: linear-gradient(135deg, #ffc107 0%, #ffed4e 100%);
        color: #1a1a1a;
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 25px;
        font-weight: bold;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
        font-size: 1.1rem;
        display: inline-block;
        text-decoration: none;
    }

        .btn-calendario:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(255, 193, 7, 0.6);
            color: #000;
            background: linear-gradient(135deg, #ffed4e 0%, #ffc107 100%);
            text-decoration: none;
        }

    .btn-grupos {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 25px;
        font-weight: bold;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.4);
        font-size: 1.1rem;
        display: inline-block;
        text-decoration: none;
    }

        .btn-grupos:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(40, 167, 69, 0.6);
            color: white;
            text-decoration: none;
        }

    .botones-accion {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
        margin-bottom: 2rem;
    }

    @@media (min-width: 768px) {
        .botones-accion

    {
        flex-direction: row;
        justify-content: center;
    }

    }

    .cliente-card {
        background: linear-gradient(135deg, rgba(45, 45, 45, 0.8) 0%, rgba(26, 26, 26, 0.8) 100%);
        border: 2px solid rgba(255, 193, 7, 0.3);
        border-radius: 15px;
        padding: 1rem;
        margin-bottom: 1rem;
        transition: all 0.3s;
    }

        .cliente-card:hover {
            border-color: #ffc107;
            transform: translateX(5px);
        }

    .rutina-mini-card {
        background: rgba(45, 45, 45, 0.6);
        border: 1px solid rgba(255, 193, 7, 0.2);
        border-radius: 10px;
        padding: 0.8rem;
        margin-bottom: 0.8rem;
    }
</style>

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="hero-section position-relative">
        <div class="text-center">
            <h1 class="display-4 text-yellow mb-3">
                <i class="fa fa-clipboard-list me-3"></i>Gestión de Rutinas
            </h1>
            <p class="lead text-white-custom">Panel de administración - @empleadoNombre</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fa fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fa fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <i class="fa fa-exclamation-triangle me-2"></i>@TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Estadísticas -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="stats-card">
                <i class="fa fa-user-check text-yellow mb-2" style="font-size: 2.5rem;"></i>
                <h3 class="text-yellow mb-0">@totalClientesActivos</h3>
                <p class="text-white-custom mb-0">Clientes Disponibles</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card">
                <i class="fa fa-dumbbell text-yellow mb-2" style="font-size: 2.5rem;"></i>
                <h3 class="text-yellow mb-0">@rutinasRecientes.Count</h3>
                <p class="text-white-custom mb-0">Rutinas Creadas</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card">
                <i class="fa fa-chart-line text-yellow mb-2" style="font-size: 2.5rem;"></i>
                <h3 class="text-yellow mb-0">@rutinasRecientes.Count(r => r.Activa)</h3>
                <p class="text-white-custom mb-0">Rutinas Activas</p>
            </div>
        </div>
    </div>

    <!-- BOTONES DE ACCIÓN -->
    <div class="botones-accion">
        <a asp-controller="GestionRutinas" asp-action="CalendarioSemanal" class="btn-calendario">
            <i class="fa fa-calendar-week me-2"></i>Ver Calendario Semanal
        </a>

        <a asp-controller="GestionRutinas" asp-action="MisGrupos" class="btn-grupos">
            <i class="fa fa-users me-2"></i>Gestionar Mis Grupos
        </a>
    </div>

    <p class="text-center text-white-custom mb-4 small">
        <i class="fa fa-info-circle me-2"></i>
        Desde aquí puedes evaluar clientes y crear rutinas personalizadas
    </p>

    <hr style="border-color: rgba(255, 193, 7, 0.3);">

    <!-- Dos Columnas: Clientes + Rutinas Recientes -->
    <div class="row">
        <!-- CLIENTES DISPONIBLES -->
        <div class="col-lg-6">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="text-yellow mb-0">
                    <i class="fa fa-user-check me-2"></i>Clientes Disponibles (@totalClientesActivos)
                </h4>
                <a asp-controller="GestionRutinas" asp-action="VisualizarClientes" class="btn btn-sm btn-outline-info">
                    <i class="fa fa-eye me-1"></i>Ver Todos
                </a>
            </div>

            @if (clientesActivos.Any())
            {
                <div style="max-height: 600px; overflow-y: auto;">
                    @foreach (var cliente in clientesActivos.Take(10))
                    {
                        <div class="cliente-card">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fa fa-user-circle fa-2x text-yellow"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="text-yellow mb-1">@cliente.Nombre</h6>
                                    <p class="text-white-custom small mb-0">
                                        <i class="fa fa-envelope me-1"></i>@cliente.Email
                                    </p>
                                    @if (!string.IsNullOrEmpty(cliente.Telefono))
                                    {
                                        <p class="text-white-custom small mb-0">
                                            <i class="fa fa-phone me-1"></i>@cliente.Telefono
                                        </p>
                                    }
                                </div>
                                <div>
                                    <span class="badge bg-success">
                                        <i class="fa fa-check-circle me-1"></i>Activo
                                    </span>
                                </div>
                            </div>
                        </div>
                    }

                    @if (clientesActivos.Count > 10)
                    {
                        <div class="text-center mt-3">
                            <a asp-controller="GestionRutinas" asp-action="VisualizarClientes" class="btn btn-outline-warning">
                                <i class="fa fa-users me-2"></i>Ver los @clientesActivos.Count clientes
                            </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fa fa-info-circle me-2"></i>
                    <span class="text-white-custom">No hay clientes disponibles. Todos están en grupos.</span>
                </div>
            }
        </div>

        <!-- RUTINAS RECIENTES -->
        <div class="col-lg-6">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="text-yellow mb-0">
                    <i class="fa fa-history me-2"></i>Rutinas Recientes
                </h4>
                <a asp-controller="GestionRutinas" asp-action="ListarRutinas" class="btn btn-sm btn-outline-warning">
                    <i class="fa fa-list me-1"></i>Ver Todas
                </a>
            </div>

            @if (rutinasRecientes.Any())
            {
                <div style="max-height: 600px; overflow-y: auto;">
                    @foreach (var rutina in rutinasRecientes)
                    {
                        <div class="rutina-mini-card">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h6 class="text-yellow mb-1">@rutina.Nombre</h6>
                                    <p class="text-white-custom small mb-1">
                                        <i class="fa fa-user me-1"></i><strong>Cliente:</strong> @rutina.Cliente?.Nombre
                                    </p>
                                    <p class="text-white-custom small mb-0">
                                        <i class="fa fa-calendar me-1"></i>@rutina.FechaCreacion.ToString("dd/MM/yyyy")
                                        @if (rutina.Activa)
                                        {
                                            <span class="badge bg-success ms-2">Activa</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary ms-2">Finalizada</span>
                                        }
                                    </p>
                                </div>
                                <div>
                                    <a asp-controller="GestionRutinas"
                                       asp-action="VerRutinaDetalle"
                                       asp-route-rutinaId="@rutina.RutinaId"
                                       class="btn btn-sm btn-outline-info"
                                       title="Ver detalle">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fa fa-info-circle me-2"></i>
                    <span class="text-white-custom">Aún no has creado rutinas. Ve a "Mis Grupos" para empezar.</span>
                </div>
            }
        </div>
    </div>
</div>

<div style="height: 150px;"></div>